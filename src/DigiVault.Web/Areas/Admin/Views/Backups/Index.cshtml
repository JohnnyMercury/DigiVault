@model List<DigiVault.Web.Services.BackupInfo>
@{
    ViewData["Title"] = "Бэкапы";
}

<div class="row g-3 mb-4">
    <div class="col-auto">
        <div class="stat-card" style="padding: 1rem 1.5rem;">
            <div class="stat-label">Всего бэкапов</div>
            <div style="font-size: 1.5rem; font-weight: 700;">@Model.Count</div>
        </div>
    </div>
    <div class="col-auto">
        <div class="stat-card" style="padding: 1rem 1.5rem;">
            <div class="stat-label">Общий размер</div>
            <div style="font-size: 1.5rem; font-weight: 700;">
                @{
                    var totalSize = Model.Sum(b => b.SizeInBytes);
                    var sizeDisplay = totalSize > 1024 * 1024
                        ? $"{totalSize / 1024.0 / 1024.0:N1} MB"
                        : $"{totalSize / 1024.0:N1} KB";
                }
                @sizeDisplay
            </div>
        </div>
    </div>
    <div class="col-auto d-flex align-items-center">
        <form asp-action="Create" method="post">
            @Html.AntiForgeryToken()
            <button type="submit" class="btn btn-primary">
                <i class="bi bi-plus-circle me-1"></i>Создать бэкап
            </button>
        </form>
    </div>
</div>

@if (Model.Any())
{
    <div class="data-card">
        <div class="data-card-header">
            <h5 class="data-card-title">
                <i class="bi bi-archive me-2"></i>История бэкапов
            </h5>
        </div>
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Дата</th>
                        <th>Размер</th>
                        <th>Тип</th>
                        <th>Статус</th>
                        <th>Действия</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var backup in Model)
                    {
                        <tr>
                            <td><code style="color: #4facfe;">@backup.Id</code></td>
                            <td>@backup.CreatedAt.ToString("dd.MM.yyyy HH:mm")</td>
                            <td>
                                @if (backup.SizeInBytes > 1024 * 1024)
                                {
                                    @($"{backup.SizeInBytes / 1024.0 / 1024.0:N1} MB")
                                }
                                else
                                {
                                    @($"{backup.SizeInBytes / 1024.0:N1} KB")
                                }
                            </td>
                            <td><span class="badge" style="background: rgba(79, 172, 254, 0.15); color: #4facfe;">@backup.Type</span></td>
                            <td><span class="badge-status completed">@backup.Status</span></td>
                            <td>
                                <div class="d-flex gap-1">
                                    <a asp-action="Download" asp-route-id="@backup.Id" class="btn btn-outline-light btn-sm">
                                        <i class="bi bi-download"></i>
                                    </a>
                                    <form asp-action="Delete" asp-route-id="@backup.Id" method="post" onsubmit="return confirm('Удалить этот бэкап?')">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn btn-outline-danger btn-sm">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}
else
{
    <div class="data-card">
        <div class="empty-state">
            <i class="bi bi-archive" style="font-size: 3rem;"></i>
            <p class="mt-2">Бэкапов пока нет</p>
            <p class="text-muted">Создайте первый бэкап кнопкой выше</p>
        </div>
    </div>
}
