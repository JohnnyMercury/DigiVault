@using DigiVault.Core.Entities
@using DigiVault.Core.Enums
@{
    ViewData["Title"] = "Дашборд";
}

<!-- Stats -->
<div class="row g-3 mb-4">
    <div class="col-6 col-lg-3">
        <a asp-controller="Users" asp-action="Index" class="stat-card d-block text-decoration-none text-white">
            <div class="stat-icon users">
                <i class="bi bi-people-fill"></i>
            </div>
            <div class="stat-value">@ViewBag.TotalUsers</div>
            <div class="stat-label">Пользователей</div>
        </a>
    </div>
    <div class="col-6 col-lg-3">
        <a asp-controller="Products" asp-action="Index" class="stat-card d-block text-decoration-none text-white">
            <div class="stat-icon products">
                <i class="bi bi-box-seam-fill"></i>
            </div>
            <div class="stat-value">@ViewBag.TotalProducts</div>
            <div class="stat-label">Товаров</div>
        </a>
    </div>
    <div class="col-6 col-lg-3">
        <a asp-controller="Orders" asp-action="Index" class="stat-card d-block text-decoration-none text-white">
            <div class="stat-icon orders">
                <i class="bi bi-bag-check-fill"></i>
            </div>
            <div class="stat-value">@ViewBag.TotalOrders</div>
            <div class="stat-label">Заказов</div>
        </a>
    </div>
    <div class="col-6 col-lg-3">
        <a asp-controller="Orders" asp-action="Index" class="stat-card d-block text-decoration-none text-white">
            <div class="stat-icon revenue">
                <i class="bi bi-currency-exchange"></i>
            </div>
            <div class="stat-value">@(((decimal)ViewBag.TotalRevenue).ToString("N0")) ₽</div>
            <div class="stat-label">Выручка</div>
        </a>
    </div>
</div>

<div class="row g-3">
    <!-- Recent Orders -->
    <div class="col-12 col-xl-7">
        <div class="data-card h-100">
            <div class="data-card-header">
                <h3 class="data-card-title"><i class="bi bi-clock-history me-2"></i>Последние заказы</h3>
                <a asp-controller="Orders" asp-action="Index" class="btn btn-sm btn-outline-light">
                    Все заказы <i class="bi bi-arrow-right ms-1"></i>
                </a>
            </div>
            @{
                var recentOrders = ViewBag.RecentOrders as List<Order>;
            }
            @if (recentOrders != null && recentOrders.Any())
            {
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Заказ</th>
                                <th>Клиент</th>
                                <th>Сумма</th>
                                <th>Статус</th>
                                <th>Дата</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var order in recentOrders)
                            {
                                var statusClass = order.Status switch
                                {
                                    OrderStatus.Completed => "completed",
                                    OrderStatus.Processing => "pending",
                                    OrderStatus.Pending => "pending",
                                    _ => "cancelled"
                                };
                                var statusText = order.Status switch
                                {
                                    OrderStatus.Completed => "Выполнен",
                                    OrderStatus.Processing => "В обработке",
                                    OrderStatus.Pending => "Ожидает",
                                    _ => "Отменён"
                                };
                                <tr>
                                    <td><code style="color: #667eea;">#@order.Id</code></td>
                                    <td>@(order.User?.Email ?? "—")</td>
                                    <td style="color: #4facfe; font-weight: 600;">@order.TotalAmount.ToString("N0") ₽</td>
                                    <td><span class="badge-status @statusClass">@statusText</span></td>
                                    <td style="color: rgba(255,255,255,0.5);">@order.CreatedAt.ToString("dd.MM.yyyy HH:mm")</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="empty-state">
                    <i class="bi bi-inbox fs-1 mb-3 d-block"></i>
                    <p>Заказов пока нет</p>
                </div>
            }
        </div>
    </div>

    <!-- Side Cards -->
    <div class="col-12 col-xl-5">
        <div class="row g-3">
            <!-- Low Stock -->
            <div class="col-12 col-md-6 col-xl-12">
                <div class="data-card">
                    <div class="data-card-header">
                        <h3 class="data-card-title"><i class="bi bi-exclamation-triangle me-2 text-warning"></i>Мало на складе</h3>
                    </div>
                    @{
                        var lowStock = ViewBag.LowStockProducts as List<Product>;
                    }
                    @if (lowStock != null && lowStock.Any())
                    {
                        <div class="p-3">
                            @foreach (var product in lowStock)
                            {
                                <div class="d-flex justify-content-between align-items-center p-2 mb-2" style="background: rgba(239, 68, 68, 0.1); border-radius: 10px;">
                                    <span style="font-weight: 500;">@product.Name</span>
                                    <span class="badge-status cancelled">@product.StockQuantity шт.</span>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="p-4 text-center" style="color: rgba(255,255,255,0.4);">
                            <i class="bi bi-check-circle text-success fs-4 mb-2 d-block"></i>
                            Все товары в наличии
                        </div>
                    }
                </div>
            </div>

            <!-- Today Stats -->
            <div class="col-12 col-md-6 col-xl-12">
                <div class="data-card">
                    <div class="data-card-header">
                        <h3 class="data-card-title"><i class="bi bi-graph-up me-2"></i>Статистика</h3>
                    </div>
                    <div class="p-3">
                        <div class="d-flex justify-content-between align-items-center p-3 mb-2" style="background: rgba(255, 255, 255, 0.03); border-radius: 10px;">
                            <span style="color: rgba(255,255,255,0.6);">Заказов сегодня</span>
                            <span style="font-weight: 700; font-size: 1.25rem;">@ViewBag.TodayOrders</span>
                        </div>
                        <div class="d-flex justify-content-between align-items-center p-3" style="background: rgba(255, 255, 255, 0.03); border-radius: 10px;">
                            <span style="color: rgba(255,255,255,0.6);">Выручка за месяц</span>
                            <span style="font-weight: 700; font-size: 1.25rem; color: #22c55e;">@(((decimal)ViewBag.MonthlyRevenue).ToString("N0")) ₽</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
