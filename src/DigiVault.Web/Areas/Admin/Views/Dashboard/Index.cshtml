@{
    ViewData["Title"] = "Dashboard";
}

<div class="row g-4 mb-4">
    <div class="col-md-3">
        <div class="card bg-dark border-secondary">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="bg-primary bg-opacity-10 rounded p-3 me-3">
                        <i class="bi bi-people text-primary fs-4"></i>
                    </div>
                    <div>
                        <div class="text-muted small">Total Users</div>
                        <div class="fs-4 fw-bold">@ViewBag.TotalUsers</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-dark border-secondary">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="bg-success bg-opacity-10 rounded p-3 me-3">
                        <i class="bi bi-box text-success fs-4"></i>
                    </div>
                    <div>
                        <div class="text-muted small">Products</div>
                        <div class="fs-4 fw-bold">@ViewBag.TotalProducts</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-dark border-secondary">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="bg-warning bg-opacity-10 rounded p-3 me-3">
                        <i class="bi bi-receipt text-warning fs-4"></i>
                    </div>
                    <div>
                        <div class="text-muted small">Total Orders</div>
                        <div class="fs-4 fw-bold">@ViewBag.TotalOrders</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-dark border-secondary">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="bg-info bg-opacity-10 rounded p-3 me-3">
                        <i class="bi bi-currency-dollar text-info fs-4"></i>
                    </div>
                    <div>
                        <div class="text-muted small">Total Revenue</div>
                        <div class="fs-4 fw-bold">$@(((decimal)ViewBag.TotalRevenue).ToString("F2"))</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row g-4">
    <div class="col-lg-8">
        <div class="card bg-dark border-secondary">
            <div class="card-header border-secondary d-flex justify-content-between align-items-center">
                <h5 class="mb-0">Recent Orders</h5>
                <a asp-controller="Orders" asp-action="Index" class="btn btn-sm btn-outline-primary">View All</a>
            </div>
            <div class="table-responsive">
                <table class="table table-dark table-hover mb-0">
                    <thead>
                        <tr>
                            <th>Order #</th>
                            <th>Customer</th>
                            <th>Amount</th>
                            <th>Status</th>
                            <th>Date</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var order in ViewBag.RecentOrders as List<Order>)
                        {
                            <tr>
                                <td><code>@order.OrderNumber</code></td>
                                <td>@order.User?.Email</td>
                                <td class="text-primary">$@order.TotalAmount.ToString("F2")</td>
                                <td>
                                    @{
                                        var statusClass = order.Status switch
                                        {
                                            OrderStatus.Completed => "success",
                                            OrderStatus.Processing => "info",
                                            OrderStatus.Pending => "warning",
                                            _ => "secondary"
                                        };
                                    }
                                    <span class="badge bg-@statusClass">@order.Status</span>
                                </td>
                                <td>@order.CreatedAt.ToString("MMM dd, HH:mm")</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <div class="col-lg-4">
        <div class="card bg-dark border-secondary">
            <div class="card-header border-secondary">
                <h5 class="mb-0">Low Stock Alert</h5>
            </div>
            <div class="list-group list-group-flush">
                @foreach (var product in ViewBag.LowStockProducts as List<Product>)
                {
                    <a asp-controller="Products" asp-action="Edit" asp-route-id="@product.Id" class="list-group-item list-group-item-action bg-dark text-white border-secondary">
                        <div class="d-flex justify-content-between align-items-center">
                            <span>@product.Name</span>
                            <span class="badge bg-danger">@product.StockQuantity left</span>
                        </div>
                    </a>
                }
                @if (!(ViewBag.LowStockProducts as List<Product>).Any())
                {
                    <div class="list-group-item bg-dark text-muted border-secondary">
                        All products are well stocked
                    </div>
                }
            </div>
        </div>

        <div class="card bg-dark border-secondary mt-4">
            <div class="card-body">
                <h6 class="text-muted mb-3">Today's Stats</h6>
                <div class="d-flex justify-content-between mb-2">
                    <span>Orders Today</span>
                    <span class="fw-bold">@ViewBag.TodayOrders</span>
                </div>
                <div class="d-flex justify-content-between">
                    <span>Monthly Revenue</span>
                    <span class="fw-bold text-success">$@(((decimal)ViewBag.MonthlyRevenue).ToString("F2"))</span>
                </div>
            </div>
        </div>
    </div>
</div>
