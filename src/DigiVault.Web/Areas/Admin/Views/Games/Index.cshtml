@model List<DigiVault.Core.Entities.Game>
@{
    ViewData["Title"] = "Игры и товары";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h4 class="mb-0">Игры</h4>
        <small class="text-muted">Управление играми и игровыми товарами</small>
    </div>
    <div class="d-flex gap-2">
        @if (!Model.Any())
        {
            <form asp-action="Seed" method="post" class="d-inline">
                @Html.AntiForgeryToken()
                <button type="submit" class="btn btn-success" onclick="return confirm('Загрузить начальные данные для всех игр?')">
                    <i class="bi bi-database-fill-add me-1"></i>Загрузить данные
                </button>
            </form>
        }
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle me-1"></i>Добавить игру
        </a>
    </div>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="bi bi-check-circle me-2"></i>@TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="row g-4">
    @foreach (var game in Model)
    {
        var activeProducts = game.Products.Count(p => p.IsActive);
        var totalProducts = game.Products.Count;

        <div class="col-md-6 col-lg-4">
            <div class="data-card h-100" style="@(game.IsActive ? "" : "opacity: 0.6;")">
                <div class="d-flex align-items-start mb-3">
                    <div class="me-3" style="width: 60px; height: 60px; border-radius: 12px; background: @game.Gradient; display: flex; align-items: center; justify-content: center; font-size: 1.5rem; overflow: hidden;">
                        @if (!string.IsNullOrEmpty(game.ImageUrl))
                        {
                            <img src="@game.ImageUrl" alt="@game.Name" style="width: 100%; height: 100%; object-fit: cover;">
                        }
                        else
                        {
                            @game.Icon
                        }
                    </div>
                    <div class="flex-grow-1">
                        <h5 class="mb-0" style="font-weight: 600;">@game.Name</h5>
                        @if (!string.IsNullOrEmpty(game.Subtitle))
                        {
                            <small class="text-muted">@game.Subtitle</small>
                        }
                        <div class="mt-1">
                            <span class="badge bg-info">@game.CurrencyShort</span>
                            @if (!game.IsActive)
                            {
                                <span class="badge bg-secondary">Скрыта</span>
                            }
                        </div>
                    </div>
                </div>

                <div class="mb-3" style="background: rgba(255,255,255,0.05); padding: 0.75rem; border-radius: 8px;">
                    <div class="d-flex justify-content-between align-items-center">
                        <span style="color: rgba(255,255,255,0.6); font-size: 0.85rem;">Товаров</span>
                        <span style="font-weight: 600; color: #4facfe;">@activeProducts / @totalProducts</span>
                    </div>
                </div>

                <div class="d-flex gap-2">
                    <a asp-action="Products" asp-route-id="@game.Id" class="btn btn-primary flex-grow-1">
                        <i class="bi bi-box-seam me-1"></i>Товары
                    </a>
                    <a asp-action="Edit" asp-route-id="@game.Id" class="btn btn-outline-light">
                        <i class="bi bi-pencil"></i>
                    </a>
                    <form asp-action="Delete" asp-route-id="@game.Id" method="post" class="d-inline">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-outline-danger" onclick="return confirm('Скрыть игру?')">
                            <i class="bi bi-eye-slash"></i>
                        </button>
                    </form>
                    <form asp-action="Destroy" asp-route-id="@game.Id" method="post" class="d-inline">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-outline-danger" onclick="return confirm('Удалить игру навсегда? Все товары тоже будут удалены. Это действие необратимо.')">
                            <i class="bi bi-trash"></i>
                        </button>
                    </form>
                </div>
            </div>
        </div>
    }

    @if (!Model.Any())
    {
        <div class="col-12">
            <div class="data-card text-center py-5">
                <i class="bi bi-controller fs-1 mb-3" style="color: rgba(255,255,255,0.3);"></i>
                <h5>Игры не найдены</h5>
                <p class="text-muted mb-3">Нажмите "Загрузить данные" чтобы добавить начальные игры и товары</p>
            </div>
        </div>
    }
</div>
