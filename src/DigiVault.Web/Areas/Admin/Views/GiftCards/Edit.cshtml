@model DigiVault.Core.Entities.GiftCard
@using DigiVault.Core.Entities
@{
    ViewData["Title"] = $"Редактировать - {Model.Name}";
}

<div class="d-flex align-items-center gap-3 mb-4">
    <a asp-action="Index" class="btn btn-outline-light">
        <i class="bi bi-arrow-left"></i>
    </a>
    <h4 class="mb-0">Редактировать карту</h4>
</div>

<form asp-action="Edit" method="post" enctype="multipart/form-data">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id">
    <input type="hidden" asp-for="CreatedAt">

    <div class="row">
        <div class="col-lg-8">
            <div class="data-card mb-4">
                <h5 class="mb-3">Основная информация</h5>
                <div class="row g-3">
                    <div class="col-md-6">
                        <label class="form-label">Название <span class="text-danger">*</span></label>
                        <input asp-for="Name" class="form-control" required>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Slug (URL) <span class="text-danger">*</span></label>
                        <input asp-for="Slug" class="form-control" required>
                        <small class="text-muted">Латиницей, без пробелов</small>
                    </div>
                    <div class="col-12">
                        <label class="form-label">Описание</label>
                        <input asp-for="Description" class="form-control">
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Категория</label>
                        <select asp-for="Category" class="form-select">
                            <option value="@GiftCardCategory.Gaming">Игровая платформа</option>
                            <option value="@GiftCardCategory.Streaming">Стриминговый сервис</option>
                        </select>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Порядок сортировки</label>
                        <input asp-for="SortOrder" type="number" class="form-control">
                    </div>
                </div>
            </div>

            <div class="data-card mb-4">
                <h5 class="mb-3">Внешний вид</h5>
                <div class="row g-3">
                    <div class="col-md-4">
                        <label class="form-label">Иконка (emoji)</label>
                        <input asp-for="Icon" class="form-control">
                    </div>
                    <div class="col-md-8">
                        <label class="form-label">Градиент фона</label>
                        <input asp-for="Gradient" class="form-control">
                    </div>
                </div>
                <div class="mt-3">
                    <span class="text-muted small">Превью:</span>
                    <div style="width: 80px; height: 80px; border-radius: 16px; background: @Model.Gradient; display: flex; align-items: center; justify-content: center; font-size: 2rem; margin-top: 0.5rem;">
                        @Model.Icon
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="data-card mb-4">
                <h5 class="mb-3">Картинка</h5>

                @if (!string.IsNullOrEmpty(Model.ImageUrl))
                {
                    <div class="mb-3 text-center" id="currentImage">
                        <img src="@Model.ImageUrl" alt="@Model.Name" style="max-width: 100%; max-height: 150px; border-radius: 12px;">
                        <p class="text-muted small mt-2">Текущая картинка</p>
                    </div>
                }

                <div class="mb-3">
                    <div class="upload-zone" id="uploadZone" onclick="document.getElementById('imageUpload').click()">
                        <input type="file" name="imageFile" class="d-none" accept="image/*" id="imageUpload">
                        <div class="upload-zone-content">
                            <i class="bi bi-cloud-arrow-up fs-1 text-primary mb-2"></i>
                            <p class="mb-1">Нажмите или перетащите</p>
                            <small class="text-muted">PNG, JPG, WEBP до 5MB</small>
                        </div>
                    </div>
                </div>

                <div id="imagePreview" class="text-center mb-3" style="display: none;">
                    <img src="" alt="Preview" style="max-width: 100%; max-height: 150px; border-radius: 12px;">
                    <p class="text-success small mt-2"><i class="bi bi-check-circle"></i> Новая картинка выбрана</p>
                </div>

                <div class="mb-3">
                    <label class="form-label">Или вставьте URL</label>
                    <input asp-for="ImageUrl" class="form-control" placeholder="https://...">
                </div>
            </div>

            <div class="data-card mb-4">
                <h5 class="mb-3">Статус</h5>
                <div class="form-check form-switch">
                    <input asp-for="IsActive" class="form-check-input" type="checkbox">
                    <label asp-for="IsActive" class="form-check-label">Активна</label>
                </div>
            </div>

            <button type="submit" class="btn btn-primary w-100">
                <i class="bi bi-check-circle me-1"></i>Сохранить
            </button>
        </div>
    </div>
</form>

@section Styles {
<style>
    .upload-zone {
        border: 2px dashed rgba(102, 126, 234, 0.4);
        border-radius: 12px;
        padding: 2rem 1rem;
        text-align: center;
        cursor: pointer;
        transition: all 0.3s ease;
        background: rgba(102, 126, 234, 0.05);
    }
    .upload-zone:hover { border-color: #667eea; background: rgba(102, 126, 234, 0.1); }
    .upload-zone-content { display: flex; flex-direction: column; align-items: center; }
</style>
}

@section Scripts {
<script>
    const imageUpload = document.getElementById('imageUpload');
    const imagePreview = document.getElementById('imagePreview');
    const uploadZone = document.getElementById('uploadZone');
    const currentImage = document.getElementById('currentImage');

    imageUpload.addEventListener('change', e => handleFile(e.target.files[0]));

    uploadZone.addEventListener('dragover', e => { e.preventDefault(); uploadZone.classList.add('dragover'); });
    uploadZone.addEventListener('dragleave', e => { e.preventDefault(); uploadZone.classList.remove('dragover'); });
    uploadZone.addEventListener('drop', e => {
        e.preventDefault(); uploadZone.classList.remove('dragover');
        const file = e.dataTransfer.files[0];
        if (file && file.type.startsWith('image/')) { imageUpload.files = e.dataTransfer.files; handleFile(file); }
    });

    function handleFile(file) {
        if (!file) return;
        const reader = new FileReader();
        reader.onload = e => {
            imagePreview.style.display = 'block';
            imagePreview.querySelector('img').src = e.target.result;
            if (currentImage) currentImage.style.display = 'none';
            uploadZone.querySelector('.upload-zone-content').innerHTML = `
                <i class="bi bi-check-circle fs-1 text-success mb-2"></i>
                <p class="mb-1 text-success">${file.name}</p>
                <small class="text-muted">Нажмите "Сохранить" для загрузки</small>`;
        };
        reader.readAsDataURL(file);
    }
</script>
}
