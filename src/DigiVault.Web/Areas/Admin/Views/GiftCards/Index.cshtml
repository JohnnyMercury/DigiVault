@model List<DigiVault.Core.Entities.GiftCard>
@using DigiVault.Core.Entities
@{
    ViewData["Title"] = "Подарочные карты";
    var gaming = Model.Where(g => g.Category == GiftCardCategory.Gaming).ToList();
    var streaming = Model.Where(g => g.Category == GiftCardCategory.Streaming).ToList();
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h4 class="mb-0">Подарочные карты</h4>
        <small class="text-muted">Управление подарочными картами на сайте</small>
    </div>
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-circle me-1"></i>Добавить карту
    </a>
</div>

@if (gaming.Any())
{
    <h5 class="mb-3 mt-2">
        <i class="bi bi-controller me-2" style="color: #4facfe;"></i>Игровые платформы
    </h5>
    <div class="row g-4 mb-5">
        @foreach (var card in gaming)
        {
            <div class="col-md-6 col-lg-4">
                <div class="data-card h-100" style="@(card.IsActive ? "" : "opacity: 0.6;")">
                    <div class="d-flex align-items-start mb-3">
                        <div class="me-3" style="width: 60px; height: 60px; border-radius: 12px; background: @card.Gradient; display: flex; align-items: center; justify-content: center; font-size: 1.5rem; overflow: hidden;">
                            @if (!string.IsNullOrEmpty(card.ImageUrl))
                            {
                                <img src="@card.ImageUrl" alt="@card.Name" style="width: 100%; height: 100%; object-fit: cover;">
                            }
                            else
                            {
                                @card.Icon
                            }
                        </div>
                        <div class="flex-grow-1">
                            <h5 class="mb-0" style="font-weight: 600;">@card.Name</h5>
                            @if (!string.IsNullOrEmpty(card.Description))
                            {
                                <small class="text-muted">@card.Description</small>
                            }
                            <div class="mt-1">
                                <span class="badge" style="background: rgba(79, 172, 254, 0.15); color: #4facfe;">Игровая</span>
                                @if (!card.IsActive)
                                {
                                    <span class="badge bg-secondary">Скрыта</span>
                                }
                            </div>
                        </div>
                    </div>

                    <div class="mb-3" style="background: rgba(255,255,255,0.05); padding: 0.75rem; border-radius: 8px;">
                        <div class="d-flex justify-content-between align-items-center">
                            <span style="color: rgba(255,255,255,0.6); font-size: 0.85rem;">Товаров</span>
                            <span style="font-weight: 600; color: #4facfe;">@card.Products.Count(p => p.IsActive) / @card.Products.Count</span>
                        </div>
                    </div>

                    <div class="d-flex gap-2">
                        <a asp-action="Products" asp-route-id="@card.Id" class="btn btn-primary flex-grow-1">
                            <i class="bi bi-box-seam me-1"></i>Товары
                        </a>
                        <a asp-action="Edit" asp-route-id="@card.Id" class="btn btn-outline-light">
                            <i class="bi bi-pencil"></i>
                        </a>
                        @if (card.IsActive)
                        {
                            <form asp-action="Delete" asp-route-id="@card.Id" method="post" class="d-inline">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-outline-danger" onclick="return confirm('Скрыть карту?')">
                                    <i class="bi bi-eye-slash"></i>
                                </button>
                            </form>
                        }
                        else
                        {
                            <form asp-action="Restore" asp-route-id="@card.Id" method="post" class="d-inline">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-outline-success">
                                    <i class="bi bi-eye"></i>
                                </button>
                            </form>
                        }
                        <form asp-action="Destroy" asp-route-id="@card.Id" method="post" class="d-inline">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-outline-danger" onclick="return confirm('Удалить карту навсегда? Все товары тоже будут удалены. Это действие необратимо.')">
                                <i class="bi bi-trash"></i>
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        }
    </div>
}

