@if (!Model.Any())
{
    <div class="data-card text-center py-5">
        <i class="bi bi-gift fs-1 mb-3" style="color: rgba(255,255,255,0.3);"></i>
        <h5>Подарочные карты не найдены</h5>
        <p class="text-muted mb-3">Нажмите "Добавить карту" чтобы создать первую</p>
    </div>
}
