@model DigiVault.Core.Entities.GiftCard
@using DigiVault.Core.Entities
@{
    ViewData["Title"] = $"Товары - {Model.Name}";
    var products = Model.Products.ToList();
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div class="d-flex align-items-center gap-3">
        <a asp-action="Index" class="btn btn-outline-light">
            <i class="bi bi-arrow-left"></i>
        </a>
        <div class="d-flex align-items-center gap-2">
            <div style="width: 40px; height: 40px; border-radius: 10px; background: @Model.Gradient; display: flex; align-items: center; justify-content: center; overflow: hidden;">
                @if (!string.IsNullOrEmpty(Model.ImageUrl))
                {
                    <img src="@Model.ImageUrl" alt="" style="width: 100%; height: 100%; object-fit: cover;">
                }
                else
                {
                    <span>@Model.Icon</span>
                }
            </div>
            <div>
                <h4 class="mb-0">@Model.Name</h4>
                <small class="text-muted">@Model.Description</small>
            </div>
        </div>
    </div>
    <a asp-action="CreateProduct" asp-route-id="@Model.Id" class="btn btn-primary">
        <i class="bi bi-plus-circle me-1"></i>Добавить товар
    </a>
</div>

@if (products.Any())
{
    <div class="data-card mb-4">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h5 class="mb-0"><i class="bi bi-images me-2"></i>Картинка для всех товаров</h5>
            <button class="btn btn-sm btn-outline-light" type="button" data-bs-toggle="collapse" data-bs-target="#bulkImageBlock">
                <i class="bi bi-chevron-down"></i>
            </button>
        </div>
        <div class="collapse" id="bulkImageBlock">
            <form asp-action="ApplyImageToAllProducts" asp-route-id="@Model.Id" method="post" enctype="multipart/form-data">
                @Html.AntiForgeryToken()
                <div class="row align-items-end g-3">
                    <div class="col-md-5">
                        <label class="form-label">Загрузить картинку</label>
                        <div class="bulk-upload-zone" id="bulkUploadZone" onclick="document.getElementById('bulkImageUpload').click()">
                            <input type="file" name="imageFile" class="d-none" accept="image/*" id="bulkImageUpload">
                            <div class="bulk-upload-content" id="bulkUploadContent">
                                <i class="bi bi-cloud-arrow-up text-primary me-2"></i>
                                <span>Нажмите или перетащите файл</span>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-5">
                        <label class="form-label">Или вставьте URL</label>
                        <input type="text" name="imageUrl" class="form-control" placeholder="https://example.com/image.png">
                    </div>
                    <div class="col-md-2">
                        <button type="submit" class="btn btn-info w-100" onclick="return confirm('Применить эту картинку ко всем @products.Count товарам?')">
                            <i class="bi bi-check2-all me-1"></i>Применить
                        </button>
                    </div>
                </div>
                <div id="bulkPreview" class="mt-3" style="display: none;">
                    <img src="" alt="Preview" style="max-height: 80px; border-radius: 8px;">
                    <span class="text-success small ms-2"><i class="bi bi-check-circle"></i> <span id="bulkFileName"></span></span>
                </div>
            </form>
        </div>
    </div>

    <div class="data-card">
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th style="width: 50px;">Фото</th>
                        <th>Название</th>
                        <th>Номинал</th>
                        <th>Регион</th>
                        <th>Цена</th>
                        <th>Скидка</th>
                        <th>Остаток</th>
                        <th>Статус</th>
                        <th style="width: 150px;">Действия</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var product in products)
                    {
                        <tr style="@(!product.IsActive ? "opacity: 0.5;" : "")">
                            <td>
                                @if (!string.IsNullOrEmpty(product.ImageUrl))
                                {
                                    <img src="@product.ImageUrl" alt="" style="width: 40px; height: 40px; object-fit: cover; border-radius: 8px;">
                                }
                                else
                                {
                                    <div style="width: 40px; height: 40px; background: @Model.Gradient; border-radius: 8px; display: flex; align-items: center; justify-content: center;">
                                        @Model.Icon
                                    </div>
                                }
                            </td>
                            <td>
                                <div style="font-weight: 500;">@product.Name</div>
                            </td>
                            <td><span style="font-weight: 600;">@product.Amount</span></td>
                            <td>
                                @if (!string.IsNullOrEmpty(product.Region))
                                {
                                    <span class="badge bg-secondary">@product.Region</span>
                                }
                            </td>
                            <td>
                                <span style="font-weight: 600; color: #4facfe;">@product.Price.ToString("N0") ₽</span>
                                @if (product.OldPrice.HasValue && product.OldPrice > product.Price)
                                {
                                    <br><small class="text-muted text-decoration-line-through">@product.OldPrice.Value.ToString("N0") ₽</small>
                                }
                            </td>
                            <td>
                                @if (product.Discount > 0)
                                {
                                    <span class="badge bg-danger">-@product.Discount%</span>
                                }
                            </td>
                            <td>
                                <span class="@(product.StockQuantity < 10 ? "text-danger fw-bold" : "")">@product.StockQuantity</span>
                            </td>
                            <td>
                                @if (product.IsActive)
                                {
                                    <span class="badge-status completed">Активен</span>
                                }
                                else
                                {
                                    <span class="badge-status cancelled">Скрыт</span>
                                }
                            </td>
                            <td>
                                <div class="btn-group btn-group-sm">
                                    <a asp-action="EditProduct" asp-route-id="@product.Id" class="btn btn-outline-light" title="Редактировать">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <form asp-action="DeleteProduct" asp-route-id="@product.Id" method="post" class="d-inline">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn btn-outline-danger" onclick="return confirm('Удалить товар? Это действие необратимо.')" title="Удалить">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}
else
{
    <div class="data-card text-center py-5">
        <i class="bi bi-box-seam fs-1 mb-3" style="color: rgba(255,255,255,0.3);"></i>
        <h5>Товары не найдены</h5>
        <p class="text-muted mb-3">Добавьте первый товар для этой карты</p>
        <a asp-action="CreateProduct" asp-route-id="@Model.Id" class="btn btn-primary">
            <i class="bi bi-plus-circle me-1"></i>Добавить товар
        </a>
    </div>
}

@section Styles {
<style>
    .bulk-upload-zone {
        border: 2px dashed rgba(102, 126, 234, 0.3);
        border-radius: 10px;
        padding: 0.6rem 1rem;
        cursor: pointer;
        transition: all 0.3s ease;
        background: rgba(102, 126, 234, 0.05);
    }
    .bulk-upload-zone:hover, .bulk-upload-zone.dragover {
        border-color: #667eea;
        background: rgba(102, 126, 234, 0.1);
    }
    .bulk-upload-content {
        display: flex;
        align-items: center;
    }
</style>
}

@section Scripts {
<script>
    const zone = document.getElementById('bulkUploadZone');
    if (zone) {
        const input = document.getElementById('bulkImageUpload');
        const preview = document.getElementById('bulkPreview');
        const content = document.getElementById('bulkUploadContent');
        const fileName = document.getElementById('bulkFileName');

        input.addEventListener('change', function(e) { showFile(e.target.files[0]); });

        zone.addEventListener('dragover', function(e) { e.preventDefault(); zone.classList.add('dragover'); });
        zone.addEventListener('dragleave', function(e) { e.preventDefault(); zone.classList.remove('dragover'); });
        zone.addEventListener('drop', function(e) {
            e.preventDefault();
            zone.classList.remove('dragover');
            const file = e.dataTransfer.files[0];
            if (file && file.type.startsWith('image/')) { input.files = e.dataTransfer.files; showFile(file); }
        });

        function showFile(file) {
            if (file) {
                const reader = new FileReader();
                reader.onload = function(e) {
                    preview.style.display = 'block';
                    preview.querySelector('img').src = e.target.result;
                    fileName.textContent = file.name;
                    content.innerHTML = '<i class="bi bi-check-circle text-success me-2"></i><span class="text-success">' + file.name + '</span>';
                };
                reader.readAsDataURL(file);
            }
        }
    }
</script>
}
