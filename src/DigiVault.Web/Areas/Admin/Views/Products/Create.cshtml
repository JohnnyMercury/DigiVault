@model DigiVault.Web.ViewModels.ProductCreateViewModel
@{
    ViewData["Title"] = "Create Product";
}

<div class="row justify-content-center">
    <div class="col-lg-8">
        <div class="card bg-dark border-secondary">
            <div class="card-body">
                <form asp-action="Create" method="post" enctype="multipart/form-data">
                    <div class="row">
                        <div class="col-md-8 mb-3">
                            <label class="form-label">Product Name</label>
                            <input asp-for="Name" class="form-control bg-dark border-secondary text-white" required />
                        </div>
                        <div class="col-md-4 mb-3">
                            <label class="form-label">Category</label>
                            <select asp-for="Category" class="form-select bg-dark border-secondary text-white">
                                <option value="1">VPN Subscription</option>
                                <option value="2">Game Currency</option>
                                <option value="3">Gift Card</option>
                            </select>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Description</label>
                        <textarea asp-for="Description" class="form-control bg-dark border-secondary text-white" rows="3"></textarea>
                    </div>

                    <div class="row">
                        <div class="col-md-4 mb-3">
                            <label class="form-label">Price ($)</label>
                            <input asp-for="Price" type="number" step="0.01" class="form-control bg-dark border-secondary text-white" required />
                        </div>
                        <div class="col-md-4 mb-3">
                            <label class="form-label">Old Price ($)</label>
                            <input asp-for="OldPrice" type="number" step="0.01" class="form-control bg-dark border-secondary text-white" />
                        </div>
                        <div class="col-md-4 mb-3">
                            <label class="form-label">Stock Quantity</label>
                            <input asp-for="StockQuantity" type="number" class="form-control bg-dark border-secondary text-white" value="0" />
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Image</label>
                        <input asp-for="ImageFile" type="file" class="form-control bg-dark border-secondary text-white" accept="image/*" />
                        <small class="text-muted">Upload an image (JPG, PNG, GIF, WebP)</small>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Or Image URL</label>
                        <input asp-for="ImageUrl" class="form-control bg-dark border-secondary text-white" placeholder="/images/products/..." />
                        <small class="text-muted">If no file uploaded, this URL will be used</small>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Metadata (JSON)</label>
                        <textarea asp-for="Metadata" class="form-control bg-dark border-secondary text-white font-monospace" rows="2" placeholder='{"key": "value"}'></textarea>
                    </div>

                    <div class="row mb-4">
                        <div class="col-md-6">
                            <div class="form-check">
                                <input asp-for="IsActive" class="form-check-input" checked />
                                <label asp-for="IsActive" class="form-check-label">Active</label>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-check">
                                <input asp-for="IsFeatured" class="form-check-input" />
                                <label asp-for="IsFeatured" class="form-check-label">Featured</label>
                            </div>
                        </div>
                    </div>

                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-success">
                            <i class="bi bi-check-circle me-1"></i>Create Product
                        </button>
                        <a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
