@model DigiVault.Web.ViewModels.ProductEditViewModel
@{
    ViewData["Title"] = "Edit Product";
}

<div class="row justify-content-center">
    <div class="col-lg-8">
        <div class="card bg-dark border-secondary">
            <div class="card-body">
                <form asp-action="Edit" method="post" enctype="multipart/form-data">
                    <input type="hidden" asp-for="Id" />
                    <input type="hidden" asp-for="CurrentImageUrl" />

                    <div class="row">
                        <div class="col-md-8 mb-3">
                            <label class="form-label">Product Name</label>
                            <input asp-for="Name" class="form-control bg-dark border-secondary text-white" required />
                        </div>
                        <div class="col-md-4 mb-3">
                            <label class="form-label">Category</label>
                            <select asp-for="Category" class="form-select bg-dark border-secondary text-white">
                                <option value="1">VPN Subscription</option>
                                <option value="2">Game Currency</option>
                                <option value="3">Gift Card</option>
                            </select>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Description</label>
                        <textarea asp-for="Description" class="form-control bg-dark border-secondary text-white" rows="3"></textarea>
                    </div>

                    <div class="row">
                        <div class="col-md-4 mb-3">
                            <label class="form-label">Price ($)</label>
                            <input asp-for="Price" type="number" step="0.01" class="form-control bg-dark border-secondary text-white" required />
                        </div>
                        <div class="col-md-4 mb-3">
                            <label class="form-label">Old Price ($)</label>
                            <input asp-for="OldPrice" type="number" step="0.01" class="form-control bg-dark border-secondary text-white" />
                        </div>
                        <div class="col-md-4 mb-3">
                            <label class="form-label">Stock Quantity</label>
                            <input asp-for="StockQuantity" type="number" class="form-control bg-dark border-secondary text-white" />
                        </div>
                    </div>

                    <!-- Current Image Preview -->
                    @if (!string.IsNullOrEmpty(Model.CurrentImageUrl))
                    {
                        <div class="mb-3">
                            <label class="form-label">Current Image</label>
                            <div class="p-3 bg-secondary rounded">
                                <img src="@Model.CurrentImageUrl" alt="Current image" style="max-height: 150px; max-width: 100%;" class="rounded" />
                            </div>
                        </div>
                    }

                    <div class="mb-3">
                        <label class="form-label">Upload New Image</label>
                        <input asp-for="ImageFile" type="file" class="form-control bg-dark border-secondary text-white" accept="image/*" />
                        <small class="text-muted">Upload a new image to replace the current one (JPG, PNG, GIF, WebP)</small>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Or Image URL</label>
                        <input asp-for="ImageUrl" class="form-control bg-dark border-secondary text-white" value="@Model.CurrentImageUrl" />
                        <small class="text-muted">Change URL manually (only used if no file uploaded)</small>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Metadata (JSON)</label>
                        <textarea asp-for="Metadata" class="form-control bg-dark border-secondary text-white font-monospace" rows="2"></textarea>
                    </div>

                    <div class="row mb-4">
                        <div class="col-md-6">
                            <div class="form-check">
                                <input asp-for="IsActive" class="form-check-input" />
                                <label asp-for="IsActive" class="form-check-label">Active</label>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-check">
                                <input asp-for="IsFeatured" class="form-check-input" />
                                <label asp-for="IsFeatured" class="form-check-label">Featured</label>
                            </div>
                        </div>
                    </div>

                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-check-circle me-1"></i>Save Changes
                        </button>
                        <a asp-action="Keys" asp-route-id="@Model.Id" class="btn btn-outline-secondary">
                            <i class="bi bi-key me-1"></i>Manage Keys
                        </a>
                        <a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
