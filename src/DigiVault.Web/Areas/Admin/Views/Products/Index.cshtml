@model List<Product>
@using DigiVault.Core.Enums
@{
    ViewData["Title"] = "Товары";
    var currentCategory = ViewBag.Category as ProductCategory?;
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <form method="get" class="d-flex gap-2">
            <select name="category" class="form-select" style="width: 200px;" onchange="this.form.submit()">
                <option value="">Все категории</option>
                <option value="VpnSubscription" selected="@(currentCategory == ProductCategory.VpnSubscription ? "selected" : null)">VPN подписки</option>
                <option value="GameCurrency" selected="@(currentCategory == ProductCategory.GameCurrency ? "selected" : null)">Игровая валюта</option>
                <option value="GiftCard" selected="@(currentCategory == ProductCategory.GiftCard ? "selected" : null)">Подарочные карты</option>
            </select>
            <input type="text" name="search" value="@ViewBag.Search" class="form-control" placeholder="Поиск..." style="width: 200px;">
            <button type="submit" class="btn btn-primary"><i class="bi bi-search"></i></button>
        </form>
    </div>
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-circle me-1"></i>Добавить товар
    </a>
</div>

<div class="data-card">
    <div class="table-responsive">
        <table class="table">
            <thead>
                <tr>
                    <th>Товар</th>
                    <th>Категория</th>
                    <th>Цена</th>
                    <th>Остаток</th>
                    <th>Статус</th>
                    <th>Действия</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var product in Model)
                {
                    <tr>
                        <td>
                            <div class="d-flex align-items-center">
                                @if (!string.IsNullOrEmpty(product.ImageUrl))
                                {
                                    <img src="@product.ImageUrl" alt="" style="width: 40px; height: 40px; object-fit: cover;" class="rounded me-2">
                                }
                                else
                                {
                                    <div class="rounded me-2 d-flex align-items-center justify-content-center" style="width: 40px; height: 40px; background: var(--card-bg); border: 1px solid var(--card-border);">
                                        <i class="bi bi-box text-muted"></i>
                                    </div>
                                }
                                <span style="font-weight: 500;">@product.Name</span>
                            </div>
                        </td>
                        <td>
                            @{
                                var (catName, catColor) = product.Category switch
                                {
                                    ProductCategory.VpnSubscription => ("VPN", "primary"),
                                    ProductCategory.GameCurrency => ("Игра", "info"),
                                    ProductCategory.GiftCard => ("Карта", "success"),
                                    _ => ("Другое", "secondary")
                                };
                            }
                            <span class="badge bg-@catColor">@catName</span>
                        </td>
                        <td style="color: #4facfe; font-weight: 600;">@product.Price.ToString("N0") ₽</td>
                        <td>
                            <span class="@(product.StockQuantity < 10 ? "text-danger fw-bold" : "")">@product.StockQuantity</span>
                        </td>
                        <td>
                            @if (product.IsActive)
                            {
                                <span class="badge-status completed">Активен</span>
                            }
                            else
                            {
                                <span class="badge-status cancelled">Неактивен</span>
                            }
                        </td>
                        <td>
                            <div class="btn-group btn-group-sm">
                                <a asp-action="Edit" asp-route-id="@product.Id" class="btn btn-outline-light" title="Редактировать">
                                    <i class="bi bi-pencil"></i>
                                </a>
                                <a asp-action="Keys" asp-route-id="@product.Id" class="btn btn-outline-light" title="Ключи">
                                    <i class="bi bi-key"></i>
                                </a>
                                <form asp-action="Delete" asp-route-id="@product.Id" method="post" class="d-inline">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-outline-danger" onclick="return confirm('Удалить товар?')" title="Удалить">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </form>
                            </div>
                        </td>
                    </tr>
                }
                @if (!Model.Any())
                {
                    <tr>
                        <td colspan="6" class="text-center py-4" style="color: rgba(255,255,255,0.4);">
                            <i class="bi bi-inbox fs-1 d-block mb-2"></i>
                            Товаров не найдено
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
