@model Product
@{
    ViewData["Title"] = $"Keys - {Model.Name}";
}

<div class="row">
    <div class="col-lg-8">
        <div class="card bg-dark border-secondary mb-4">
            <div class="card-header border-secondary d-flex justify-content-between align-items-center">
                <h5 class="mb-0">Product Keys</h5>
                <div>
                    <span class="badge bg-success">Available: @Model.ProductKeys.Count(k => !k.IsUsed)</span>
                    <span class="badge bg-secondary">Used: @Model.ProductKeys.Count(k => k.IsUsed)</span>
                </div>
            </div>
            <div class="table-responsive" style="max-height: 400px;">
                <table class="table table-dark table-sm mb-0">
                    <thead class="sticky-top bg-dark">
                        <tr>
                            <th>Key</th>
                            <th>Status</th>
                            <th>Added</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var key in Model.ProductKeys.OrderByDescending(k => k.CreatedAt))
                        {
                            <tr>
                                <td><code>@key.KeyValue</code></td>
                                <td>
                                    @if (key.IsUsed)
                                    {
                                        <span class="badge bg-secondary">Used</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-success">Available</span>
                                    }
                                </td>
                                <td class="text-muted small">@key.CreatedAt.ToString("MMM dd, yyyy")</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <div class="col-lg-4">
        <div class="card bg-dark border-secondary">
            <div class="card-header border-secondary">
                <h5 class="mb-0">Add Keys</h5>
            </div>
            <div class="card-body">
                <form asp-action="AddKeys" method="post">
                    <input type="hidden" name="productId" value="@Model.Id" />
                    <div class="mb-3">
                        <label class="form-label">Keys (one per line)</label>
                        <textarea name="keys" class="form-control bg-dark border-secondary text-white font-monospace" rows="10" placeholder="KEY-XXXX-XXXX-XXXX
KEY-YYYY-YYYY-YYYY
KEY-ZZZZ-ZZZZ-ZZZZ"></textarea>
                    </div>
                    <button type="submit" class="btn btn-success w-100">
                        <i class="bi bi-plus-circle me-1"></i>Add Keys
                    </button>
                </form>
            </div>
        </div>

        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-secondary w-100 mt-3">
            <i class="bi bi-arrow-left me-1"></i>Back to Edit
        </a>
    </div>
</div>
