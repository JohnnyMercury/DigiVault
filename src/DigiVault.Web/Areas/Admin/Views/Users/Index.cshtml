@model List<ApplicationUser>
@{
    ViewData["Title"] = "Users";
}

<div class="mb-4">
    <form method="get" class="d-flex gap-2">
        <input type="text" name="search" value="@ViewBag.Search" class="form-control bg-dark border-secondary" placeholder="Search by email..." style="max-width: 300px;">
        <button type="submit" class="btn btn-primary"><i class="bi bi-search"></i></button>
    </form>
</div>

<div class="card bg-dark border-secondary">
    <div class="table-responsive">
        <table class="table table-dark table-hover mb-0">
            <thead>
                <tr>
                    <th>Email</th>
                    <th>Balance</th>
                    <th>Registered</th>
                    <th>Last Login</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <td>@user.Email</td>
                        <td class="text-primary">$@user.Balance.ToString("F2")</td>
                        <td>@user.CreatedAt.ToString("MMM dd, yyyy")</td>
                        <td>@(user.LastLoginAt?.ToString("MMM dd, HH:mm") ?? "-")</td>
                        <td>
                            @if (user.IsActive)
                            {
                                <span class="badge bg-success">Active</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">Inactive</span>
                            }
                        </td>
                        <td>
                            <a asp-action="Details" asp-route-id="@user.Id" class="btn btn-sm btn-outline-primary">
                                <i class="bi bi-eye"></i> View
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@if ((int)ViewBag.TotalPages > 1)
{
    <nav class="mt-4">
        <ul class="pagination justify-content-center">
            @for (int i = 1; i <= (int)ViewBag.TotalPages; i++)
            {
                <li class="page-item @(i == (int)ViewBag.CurrentPage ? "active" : "")">
                    <a class="page-link bg-dark border-secondary" asp-action="Index" asp-route-page="@i" asp-route-search="@ViewBag.Search">@i</a>
                </li>
            }
        </ul>
    </nav>
}
