@model DigiVault.Core.Entities.GameProduct
@{
    var provider = ViewBag.VpnProvider as DigiVault.Core.Entities.VpnProvider;
    ViewData["Title"] = $"Редактировать - {Model.Name}";
}

<div class="d-flex align-items-center gap-3 mb-4">
    <a asp-action="Products" asp-route-id="@Model.VpnProviderId" class="btn btn-outline-light">
        <i class="bi bi-arrow-left"></i>
    </a>
    <h4 class="mb-0">Редактировать товар — @provider?.Name</h4>
</div>

<form asp-action="EditProduct" method="post" enctype="multipart/form-data">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id">
    <input type="hidden" asp-for="VpnProviderId">
    <input type="hidden" asp-for="ProductType">
    <input type="hidden" asp-for="CreatedAt">

    <div class="row">
        <div class="col-lg-8">
            <div class="data-card mb-4">
                <h5 class="mb-3">Информация о товаре</h5>
                <div class="row g-3">
                    <div class="col-md-6">
                        <label class="form-label">Название <span class="text-danger">*</span></label>
                        <input asp-for="Name" class="form-control" required>
                    </div>
                    <div class="col-md-3">
                        <label class="form-label">Период</label>
                        <input asp-for="Amount" class="form-control">
                    </div>
                    <div class="col-md-3">
                        <label class="form-label">Бонус</label>
                        <input asp-for="Bonus" class="form-control">
                    </div>
                    <div class="col-12">
                        <label class="form-label">Отображаемое название</label>
                        <input asp-for="TotalDisplay" class="form-control">
                    </div>
                </div>
            </div>

            <div class="data-card mb-4">
                <h5 class="mb-3">Цена и скидка</h5>
                <div class="row g-3">
                    <div class="col-md-4">
                        <label class="form-label">Цена (₽) <span class="text-danger">*</span></label>
                        <input asp-for="Price" type="number" step="0.01" class="form-control" required>
                    </div>
                    <div class="col-md-4">
                        <label class="form-label">Старая цена (₽)</label>
                        <input asp-for="OldPrice" type="number" step="0.01" class="form-control">
                    </div>
                    <div class="col-md-4">
                        <label class="form-label">Скидка (%)</label>
                        <input asp-for="Discount" type="number" class="form-control">
                    </div>
                </div>
            </div>

            <div class="data-card mb-4">
                <h5 class="mb-3">Картинка</h5>
                <div class="row align-items-center">
                    @if (!string.IsNullOrEmpty(Model.ImageUrl))
                    {
                        <div class="col-auto">
                            <img src="@Model.ImageUrl" alt="" style="width: 60px; height: 60px; object-fit: cover; border-radius: 10px;">
                        </div>
                    }
                    <div class="col">
                        <input type="file" name="imageFile" class="form-control" accept="image/*">
                    </div>
                    <div class="col">
                        <input asp-for="ImageUrl" class="form-control" placeholder="Или URL картинки">
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="data-card mb-4">
                <h5 class="mb-3">Настройки</h5>
                <div class="mb-3">
                    <label class="form-label">Количество на складе</label>
                    <input asp-for="StockQuantity" type="number" class="form-control">
                </div>
                <div class="mb-3">
                    <label class="form-label">Порядок сортировки</label>
                    <input asp-for="SortOrder" type="number" class="form-control">
                </div>
                <div class="form-check form-switch mb-2">
                    <input asp-for="IsActive" class="form-check-input" type="checkbox">
                    <label asp-for="IsActive" class="form-check-label">Активен</label>
                </div>
                <div class="form-check form-switch">
                    <input asp-for="IsFeatured" class="form-check-input" type="checkbox">
                    <label asp-for="IsFeatured" class="form-check-label">Рекомендуемый</label>
                </div>
            </div>

            <button type="submit" class="btn btn-primary w-100">
                <i class="bi bi-check-circle me-1"></i>Сохранить
            </button>
        </div>
    </div>
</form>
