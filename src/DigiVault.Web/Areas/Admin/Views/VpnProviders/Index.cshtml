@model List<DigiVault.Core.Entities.VpnProvider>
@using DigiVault.Core.Entities
@{
    ViewData["Title"] = "VPN провайдеры";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h4 class="mb-0">VPN провайдеры</h4>
        <small class="text-muted">Управление VPN подписками на сайте</small>
    </div>
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-circle me-1"></i>Добавить провайдера
    </a>
</div>

@if (Model.Any())
{
    <div class="row g-4 mb-4">
        @foreach (var provider in Model)
        {
            <div class="col-md-6 col-lg-4">
                <div class="data-card h-100" style="@(provider.IsActive ? "" : "opacity: 0.6;")">
                    <div class="d-flex align-items-start mb-3">
                        <div class="me-3" style="width: 60px; height: 60px; border-radius: 12px; background: @provider.Gradient; display: flex; align-items: center; justify-content: center; font-size: 1.5rem; overflow: hidden;">
                            @if (!string.IsNullOrEmpty(provider.ImageUrl))
                            {
                                <img src="@provider.ImageUrl" alt="@provider.Name" style="width: 100%; height: 100%; object-fit: cover;">
                            }
                            else
                            {
                                @provider.Icon
                            }
                        </div>
                        <div class="flex-grow-1">
                            <h5 class="mb-0" style="font-weight: 600;">@provider.Name</h5>
                            @if (!string.IsNullOrEmpty(provider.Tagline))
                            {
                                <small class="text-muted">@provider.Tagline</small>
                            }
                            <div class="mt-1">
                                <span class="badge" style="background: rgba(102, 126, 234, 0.15); color: #667eea;">VPN</span>
                                @if (!provider.IsActive)
                                {
                                    <span class="badge bg-secondary">Скрыт</span>
                                }
                            </div>
                        </div>
                    </div>

                    <div class="mb-3" style="background: rgba(255,255,255,0.05); padding: 0.75rem; border-radius: 8px;">
                        <div class="d-flex justify-content-between align-items-center">
                            <span style="color: rgba(255,255,255,0.6); font-size: 0.85rem;">Товаров</span>
                            <span style="font-weight: 600; color: #667eea;">@provider.Products.Count(p => p.IsActive) / @provider.Products.Count</span>
                        </div>
                    </div>

                    <div class="d-flex gap-2">
                        <a asp-action="Products" asp-route-id="@provider.Id" class="btn btn-primary flex-grow-1">
                            <i class="bi bi-box-seam me-1"></i>Товары
                        </a>
                        <a asp-action="Edit" asp-route-id="@provider.Id" class="btn btn-outline-light">
                            <i class="bi bi-pencil"></i>
                        </a>
                        @if (provider.IsActive)
                        {
                            <form asp-action="Delete" asp-route-id="@provider.Id" method="post" class="d-inline">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-outline-danger" onclick="return confirm('Скрыть провайдера?')">
                                    <i class="bi bi-eye-slash"></i>
                                </button>
                            </form>
                        }
                        else
                        {
                            <form asp-action="Restore" asp-route-id="@provider.Id" method="post" class="d-inline">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-outline-success">
                                    <i class="bi bi-eye"></i>
                                </button>
                            </form>
                        }
                        <form asp-action="Destroy" asp-route-id="@provider.Id" method="post" class="d-inline">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-outline-danger" onclick="return confirm('Удалить провайдера навсегда? Все товары тоже будут удалены. Это действие необратимо.')">
                                <i class="bi bi-trash"></i>
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="data-card text-center py-5">
        <i class="bi bi-shield-lock fs-1 mb-3" style="color: rgba(255,255,255,0.3);"></i>
        <h5>VPN провайдеры не найдены</h5>
        <p class="text-muted mb-3">Нажмите "Добавить провайдера" чтобы создать первого</p>
    </div>
}
