<style>
    .dashboard-page {
        padding: 3rem 0 5rem;
    }

    .dashboard-header {
        margin-bottom: 2.5rem;
    }

    .dashboard-title {
        font-size: 2rem;
        font-weight: 700;
        margin-bottom: 0.5rem;
    }

    .dashboard-subtitle {
        color: rgba(255, 255, 255, 0.5);
    }

    .welcome-card {
        background: var(--primary-gradient);
        border-radius: 24px;
        padding: 2.5rem;
        margin-bottom: 2rem;
        position: relative;
        overflow: hidden;
    }

    .welcome-card::before {
        content: '';
        position: absolute;
        width: 300px;
        height: 300px;
        background: rgba(255, 255, 255, 0.1);
        border-radius: 50%;
        top: -150px;
        right: -50px;
    }

    .welcome-card::after {
        content: '';
        position: absolute;
        width: 200px;
        height: 200px;
        background: rgba(255, 255, 255, 0.05);
        border-radius: 50%;
        bottom: -100px;
        left: -50px;
    }

    .welcome-content {
        position: relative;
        z-index: 1;
    }

    .welcome-greeting {
        font-size: 1.5rem;
        font-weight: 600;
        margin-bottom: 0.5rem;
    }

    .welcome-message {
        opacity: 0.9;
        margin-bottom: 1.5rem;
    }

    .balance-display {
        display: flex;
        align-items: center;
        gap: 1rem;
    }

    .balance-amount {
        font-size: 2.5rem;
        font-weight: 800;
    }

    .balance-label {
        font-size: 0.9rem;
        opacity: 0.8;
    }

    .btn-deposit {
        background: rgba(255, 255, 255, 0.2);
        border: none;
        border-radius: 12px;
        padding: 0.75rem 1.5rem;
        font-weight: 600;
        color: #fff;
        transition: all 0.3s ease;
    }

    .btn-deposit:hover {
        background: rgba(255, 255, 255, 0.3);
        transform: translateY(-2px);
    }

    .stats-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 1.5rem;
        margin-bottom: 2rem;
    }

    .stat-card {
        background: var(--card-bg);
        border: 1px solid var(--card-border);
        border-radius: 16px;
        padding: 1.5rem;
        transition: all 0.3s ease;
    }

    .stat-card:hover {
        transform: translateY(-3px);
        border-color: rgba(102, 126, 234, 0.3);
    }

    .stat-icon {
        width: 50px;
        height: 50px;
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.25rem;
        margin-bottom: 1rem;
    }

    .stat-icon.orders { background: rgba(102, 126, 234, 0.15); color: #667eea; }
    .stat-icon.completed { background: rgba(34, 197, 94, 0.15); color: #22c55e; }
    .stat-icon.spent { background: rgba(240, 147, 251, 0.15); color: #f093fb; }
    .stat-icon.keys { background: rgba(79, 172, 254, 0.15); color: #4facfe; }

    .stat-value {
        font-size: 1.75rem;
        font-weight: 700;
        margin-bottom: 0.25rem;
    }

    .stat-label {
        color: rgba(255, 255, 255, 0.5);
        font-size: 0.9rem;
    }

    .section-card {
        background: var(--card-bg);
        border: 1px solid var(--card-border);
        border-radius: 20px;
        overflow: hidden;
    }

    .section-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 1.5rem;
        border-bottom: 1px solid var(--card-border);
    }

    .section-title {
        font-size: 1.15rem;
        font-weight: 600;
        margin: 0;
    }

    .section-link {
        color: #667eea;
        text-decoration: none;
        font-size: 0.9rem;
        font-weight: 500;
    }

    .section-link:hover {
        color: #764ba2;
    }

    .order-item {
        display: flex;
        align-items: center;
        gap: 1rem;
        padding: 1.25rem 1.5rem;
        border-bottom: 1px solid var(--card-border);
        transition: background 0.3s ease;
    }

    .order-item:last-child {
        border-bottom: none;
    }

    .order-item:hover {
        background: rgba(255, 255, 255, 0.02);
    }

    .order-icon {
        width: 45px;
        height: 45px;
        border-radius: 10px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.1rem;
    }

    .order-icon.completed { background: rgba(34, 197, 94, 0.15); color: #22c55e; }
    .order-icon.pending { background: rgba(251, 191, 36, 0.15); color: #fbbf24; }
    .order-icon.cancelled { background: rgba(239, 68, 68, 0.15); color: #ef4444; }

    .order-details {
        flex-grow: 1;
    }

    .order-id {
        font-weight: 600;
        margin-bottom: 0.2rem;
    }

    .order-date {
        font-size: 0.85rem;
        color: rgba(255, 255, 255, 0.5);
    }

    .order-amount {
        font-weight: 600;
        color: #4facfe;
    }

    .order-status {
        padding: 0.3rem 0.8rem;
        border-radius: 20px;
        font-size: 0.75rem;
        font-weight: 600;
    }

    .order-status.completed { background: rgba(34, 197, 94, 0.15); color: #22c55e; }
    .order-status.pending { background: rgba(251, 191, 36, 0.15); color: #fbbf24; }
    .order-status.cancelled { background: rgba(239, 68, 68, 0.15); color: #ef4444; }

    .quick-actions {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 1rem;
        padding: 1.5rem;
    }

    .quick-action-btn {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        padding: 1rem;
        background: rgba(255, 255, 255, 0.03);
        border: 1px solid var(--card-border);
        border-radius: 12px;
        color: rgba(255, 255, 255, 0.8);
        text-decoration: none;
        transition: all 0.3s ease;
    }

    .quick-action-btn:hover {
        background: rgba(102, 126, 234, 0.1);
        border-color: rgba(102, 126, 234, 0.3);
        color: #fff;
    }

    .quick-action-btn i {
        font-size: 1.25rem;
        color: #667eea;
    }

    .empty-state {
        text-align: center;
        padding: 3rem 2rem;
        color: rgba(255, 255, 255, 0.5);
    }

    .empty-state i {
        font-size: 3rem;
        margin-bottom: 1rem;
        opacity: 0.3;
    }
</style>

