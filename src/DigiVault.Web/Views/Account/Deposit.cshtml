<style>
    .deposit-page {
        max-width: 560px;
        margin: 0 auto;
        padding: 2rem 1rem;
    }

    .deposit-card {
        background: linear-gradient(145deg, #1f1f3a 0%, #161630 100%);
        border: 1px solid rgba(255, 255, 255, 0.08);
        border-radius: 20px;
