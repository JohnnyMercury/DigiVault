@model DepositViewModel
@{
    ViewData["Title"] = "Пополнение баланса";
    var isAdmin = User.IsInRole("Admin");
}

<style>
    .deposit-page {
        max-width: 520px;
        margin: 0 auto;
        padding: 2rem 1rem;
    }

    .deposit-card {
        background: linear-gradient(145deg, #1f1f3a 0%, #161630 100%);
        border: 1px solid rgba(255, 255, 255, 0.08);
        border-radius: 20px;
        padding: 2rem;
        box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
    }

    .deposit-title {
        font-size: 1.4rem;
        font-weight: 700;
        margin-bottom: 1.5rem;
        display: flex;
        align-items: center;
        gap: 0.75rem;
    }

    .deposit-balance {
        background: rgba(102, 126, 234, 0.1);
        border: 1px solid rgba(102, 126, 234, 0.2);
        border-radius: 14px;
        padding: 1.1rem 1.25rem;
        margin-bottom: 1.5rem;
        display: flex;
        align-items: center;
        gap: 0.75rem;
    }

    .deposit-balance i { font-size: 1.25rem; color: #667eea; }
    .deposit-balance-text { font-size: 0.85rem; color: rgba(255, 255, 255, 0.6); }
    .deposit-balance-value { font-weight: 700; color: white; font-size: 1.15rem; }

    .deposit-admin-badge {
        background: rgba(34, 197, 94, 0.1);
        border: 1px solid rgba(34, 197, 94, 0.25);
        border-radius: 12px;
        padding: 0.85rem 1.25rem;
        margin-bottom: 1.5rem;
        font-size: 0.85rem;
        color: rgba(255, 255, 255, 0.7);
        display: flex;
        align-items: center;
        gap: 0.6rem;
    }
    .deposit-admin-badge i { color: #22c55e; font-size: 1rem; }

    .deposit-label {
        font-size: 0.9rem;
        font-weight: 600;
        margin-bottom: 0.6rem;
        color: rgba(255, 255, 255, 0.8);
    }

    .deposit-input-wrap {
        display: flex;
        align-items: center;
        background: rgba(255, 255, 255, 0.05);
        border: 1px solid rgba(255, 255, 255, 0.12);
        border-radius: 12px;
        padding: 0.85rem 1rem;
        margin-bottom: 0.5rem;
        gap: 0.5rem;
        transition: border-color 0.2s ease;
    }
    .deposit-input-wrap:focus-within {
        border-color: rgba(102, 126, 234, 0.5);
    }

    .deposit-input-wrap .currency { color: rgba(255, 255, 255, 0.4); font-size: 1.15rem; font-weight: 600; }

    .deposit-input-wrap input {
        flex-grow: 1;
        background: transparent;
        border: none;
        color: white;
        font-size: 1.15rem;
        font-weight: 600;
    }
    .deposit-input-wrap input:focus { outline: none; }
    .deposit-input-wrap input::placeholder { color: rgba(255, 255, 255, 0.25); }

    .quick-amounts {
        display: flex;
        gap: 0.5rem;
        flex-wrap: wrap;
        margin-bottom: 1.75rem;
        margin-top: 0.75rem;
    }

    .quick-btn {
        background: rgba(255, 255, 255, 0.05);
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 10px;
        padding: 0.55rem 1.1rem;
        color: white;
        font-size: 0.85rem;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.2s ease;
    }
    .quick-btn:hover {
        border-color: rgba(102, 126, 234, 0.4);
        background: rgba(102, 126, 234, 0.1);
    }

    .deposit-submit {
        width: 100%;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border: none;
        border-radius: 12px;
        padding: 0.95rem;
        color: white;
        font-size: 1.05rem;
        font-weight: 700;
        cursor: pointer;
        transition: all 0.3s ease;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 0.5rem;
    }
    .deposit-submit:hover {
        transform: translateY(-2px);
        box-shadow: 0 10px 30px rgba(102, 126, 234, 0.3);
    }

    .deposit-back {
        display: block;
        text-align: center;
        margin-top: 1.25rem;
        color: rgba(255, 255, 255, 0.5);
        font-size: 0.85rem;
        text-decoration: none;
        transition: color 0.2s ease;
    }
    .deposit-back:hover { color: rgba(255, 255, 255, 0.8); }

    .deposit-no-access {
        text-align: center;
        padding: 3rem 1.5rem;
    }
    .deposit-no-access i { font-size: 3rem; color: rgba(255, 255, 255, 0.2); margin-bottom: 1rem; }
    .deposit-no-access h4 { color: rgba(255, 255, 255, 0.7); margin-bottom: 0.5rem; }
    .deposit-no-access p { color: rgba(255, 255, 255, 0.4); font-size: 0.9rem; }
</style>

<div class="deposit-page">
    <div class="deposit-card">
        <div class="deposit-title">
            <i class="bi bi-plus-circle"></i>
            Пополнение баланса
        </div>

        <div class="deposit-balance">
            <i class="bi bi-wallet2"></i>
            <div>
                <div class="deposit-balance-text">Текущий баланс</div>
                <div class="deposit-balance-value">@Model.CurrentBalance.ToString("N0") ₽</div>
            </div>
        </div>

        @if (isAdmin)
        {
            <div class="deposit-admin-badge">
                <i class="bi bi-shield-check"></i>
                <span>Админ-режим: начисление средств без оплаты</span>
            </div>

            <form asp-action="Deposit" method="post">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                <div class="deposit-label">Сумма пополнения</div>
                <div class="deposit-input-wrap">
                    <span class="currency">₽</span>
                    <input asp-for="Amount" placeholder="0" type="number" min="1" step="1" />
                </div>
                <span asp-validation-for="Amount" class="text-danger small d-block"></span>

                <div class="quick-amounts">
                    <button type="button" class="quick-btn" data-amount="100">100 ₽</button>
                    <button type="button" class="quick-btn" data-amount="500">500 ₽</button>
                    <button type="button" class="quick-btn" data-amount="1000">1 000 ₽</button>
                    <button type="button" class="quick-btn" data-amount="5000">5 000 ₽</button>
                    <button type="button" class="quick-btn" data-amount="10000">10 000 ₽</button>
                </div>

                <input type="hidden" name="PaymentMethod" value="admin" />

                <button type="submit" class="deposit-submit">
                    <i class="bi bi-check-circle"></i> Начислить
                </button>
            </form>
        }
        else
        {
            <div class="deposit-no-access">
                <i class="bi bi-lock"></i>
                <h4>Пополнение скоро будет доступно</h4>
                <p>Мы работаем над подключением платёжных систем. Следите за обновлениями!</p>
            </div>
        }

        <a href="/Account/Dashboard" class="deposit-back">
            <i class="bi bi-arrow-left me-1"></i> Вернуться в личный кабинет
        </a>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        document.querySelectorAll('.quick-btn').forEach(btn => {
            btn.addEventListener('click', function() {
                document.getElementById('Amount').value = this.dataset.amount;
            });
        });
    </script>
}
