        font-weight: 700;
        margin-bottom: 1.5rem;
        display: flex;
        align-items: center;
        gap: 0.75rem;
    }

    .deposit-balance {
        background: rgba(102, 126, 234, 0.1);
        border: 1px solid rgba(102, 126, 234, 0.2);
        border-radius: 12px;
        padding: 1rem 1.25rem;
        margin-bottom: 1.5rem;
        display: flex;
        align-items: center;
        gap: 0.75rem;
    }

    .deposit-balance i { font-size: 1.25rem; color: #667eea; }
    .deposit-balance-text { font-size: 0.9rem; color: rgba(255, 255, 255, 0.7); }
    .deposit-balance-value { font-weight: 700; color: white; }

    .deposit-demo {
        background: rgba(245, 158, 11, 0.1);
        border: 1px solid rgba(245, 158, 11, 0.2);
        border-radius: 12px;
        padding: 1rem 1.25rem;
        margin-bottom: 1.5rem;
        font-size: 0.85rem;
        color: rgba(255, 255, 255, 0.7);
    }

    .deposit-demo i { color: #f59e0b; margin-right: 0.5rem; }
    .deposit-demo strong { color: #f59e0b; }

    .deposit-label {
        font-size: 0.9rem;
        font-weight: 600;
        margin-bottom: 0.75rem;
        color: rgba(255, 255, 255, 0.8);
    }

    .deposit-input-wrap {
        display: flex;
        align-items: center;
        background: rgba(255, 255, 255, 0.05);
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 12px;
        padding: 0.75rem 1rem;
        margin-bottom: 1rem;
        gap: 0.5rem;
    }

    .deposit-input-wrap span { color: rgba(255, 255, 255, 0.4); font-size: 1.25rem; font-weight: 600; }

    .deposit-input-wrap input {
        flex-grow: 1;
        background: transparent;
        border: none;
        color: white;
        font-size: 1.1rem;
        font-weight: 600;
    }

    .deposit-input-wrap input:focus { outline: none; }
    .deposit-input-wrap input::placeholder { color: rgba(255, 255, 255, 0.3); }

    .quick-amounts {
        display: flex;
        gap: 0.5rem;
        flex-wrap: wrap;
        margin-bottom: 1.5rem;
    }

    .quick-btn {
        background: rgba(255, 255, 255, 0.05);
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 8px;
        padding: 0.5rem 1rem;
        color: white;
        font-size: 0.85rem;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.2s ease;
    }

    .quick-btn:hover {
        border-color: rgba(102, 126, 234, 0.4);
        background: rgba(102, 126, 234, 0.1);
    }

    /* Payment Categories (Level 1) */
    .payment-categories {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 0.5rem;
        margin-bottom: 0.75rem;
    }

    .payment-category {
        background: rgba(255, 255, 255, 0.05);
        border: 2px solid transparent;
        border-radius: 10px;
        padding: 0.6rem 0.4rem;
        cursor: pointer;
        transition: all 0.2s ease;
        text-align: center;
    }

    .payment-category:hover { border-color: rgba(102, 126, 234, 0.3); }

    .payment-category.selected {
        border-color: #667eea;
        background: rgba(102, 126, 234, 0.1);
    }

    .payment-category-icon { font-size: 1.25rem; margin-bottom: 0.15rem; }
    .payment-category-name { font-size: 0.65rem; color: rgba(255, 255, 255, 0.7); line-height: 1.2; }

    /* Payment Methods (Level 2) */
    .payment-methods-container { margin-bottom: 1.5rem; }

    .payment-methods-group {
        display: none;
        grid-template-columns: repeat(3, 1fr);
        gap: 0.5rem;
    }

    .payment-methods-group.active { display: grid; }

    .payment-method {
        background: rgba(255, 255, 255, 0.05);
        border: 2px solid transparent;
        border-radius: 10px;
        padding: 0.75rem 0.5rem;
        cursor: pointer;
        transition: all 0.2s ease;
        text-align: center;
    }

    .payment-method:hover { border-color: rgba(102, 126, 234, 0.3); }

    .payment-method.selected {
        border-color: #667eea;
        background: rgba(102, 126, 234, 0.1);
    }

    .payment-method-icon { font-size: 1.25rem; margin-bottom: 0.25rem; }
    .payment-method-name { font-size: 0.7rem; color: rgba(255, 255, 255, 0.7); }

    .deposit-submit {
        width: 100%;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border: none;
        border-radius: 12px;
        padding: 1rem;
        color: white;
        font-size: 1.1rem;
        font-weight: 700;
        cursor: pointer;
        transition: all 0.3s ease;
    }

    .deposit-submit:hover {
        transform: translateY(-2px);
        box-shadow: 0 10px 30px rgba(102, 126, 234, 0.3);
    }
</style>

