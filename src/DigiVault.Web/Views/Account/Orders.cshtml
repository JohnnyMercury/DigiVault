@model OrderHistoryViewModel
@{
    ViewData["Title"] = "My Orders";
}

<div class="container py-4">
    <h2 class="mb-4"><i class="bi bi-box me-2"></i>My Orders</h2>

    @if (Model.Orders.Any())
    {
        <div class="card bg-dark border-secondary">
            <div class="table-responsive">
                <table class="table table-dark table-hover mb-0">
                    <thead>
                        <tr>
                            <th>Order #</th>
                            <th>Date</th>
                            <th>Items</th>
                            <th>Total</th>
                            <th>Status</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var order in Model.Orders)
                        {
                            <tr>
                                <td><code>@order.OrderNumber</code></td>
                                <td>@order.CreatedAt.ToString("MMM dd, yyyy HH:mm")</td>
                                <td>@order.Items.Count item(s)</td>
                                <td class="text-primary fw-bold">$@order.TotalAmount.ToString("F2")</td>
                                <td>
                                    <span class="badge bg-@order.StatusClass">@order.StatusName</span>
                                </td>
                                <td>
                                    <a asp-action="OrderDetails" asp-route-orderNumber="@order.OrderNumber" class="btn btn-sm btn-outline-primary">
                                        View
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

        @if (Model.TotalPages > 1)
        {
            <nav class="mt-4">
                <ul class="pagination justify-content-center">
                    @for (int i = 1; i <= Model.TotalPages; i++)
                    {
                        <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                            <a class="page-link bg-dark border-secondary" asp-action="Orders" asp-route-page="@i">@i</a>
                        </li>
                    }
                </ul>
            </nav>
        }
    }
    else
    {
        <div class="text-center py-5">
            <i class="bi bi-box display-1 text-muted"></i>
            <h4 class="mt-3">No orders yet</h4>
            <p class="text-muted">Start shopping to see your orders here</p>
            <a asp-controller="Catalog" asp-action="Index" class="btn btn-primary">
                <i class="bi bi-grid me-2"></i>Browse Products
            </a>
        </div>
    }
</div>
