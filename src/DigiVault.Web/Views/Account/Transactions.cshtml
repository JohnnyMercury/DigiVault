@model List<TransactionViewModel>
@{
    ViewData["Title"] = "Transaction History";
    var currentBalance = ViewBag.CurrentBalance as decimal? ?? 0;
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="bi bi-clock-history me-2"></i>Transaction History</h2>
        <div class="text-end">
            <div class="text-muted small">Current Balance</div>
            <div class="fs-4 fw-bold text-primary">$@currentBalance.ToString("F2")</div>
        </div>
    </div>

    @if (Model.Any())
    {
        <div class="card bg-dark border-secondary">
            <div class="table-responsive">
                <table class="table table-dark table-hover mb-0">
                    <thead>
                        <tr>
                            <th>Date</th>
                            <th>Type</th>
                            <th>Description</th>
                            <th class="text-end">Amount</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var tx in Model)
                        {
                            <tr>
                                <td>@tx.CreatedAt.ToString("MMM dd, yyyy HH:mm")</td>
                                <td><span class="badge bg-@tx.TypeClass">@tx.TypeName</span></td>
                                <td class="text-muted">@(tx.Description ?? "-")</td>
                                <td class="text-end fw-bold @(tx.Amount > 0 ? "text-success" : "text-danger")">
                                    @(tx.Amount > 0 ? "+" : "")$@Math.Abs(tx.Amount).ToString("F2")
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
    else
    {
        <div class="text-center py-5">
            <i class="bi bi-receipt display-1 text-muted"></i>
            <h4 class="mt-3">No transactions yet</h4>
            <p class="text-muted">Your transaction history will appear here</p>
            <a asp-action="Deposit" class="btn btn-primary">
                <i class="bi bi-plus-circle me-2"></i>Make a Deposit
            </a>
        </div>
    }
</div>
