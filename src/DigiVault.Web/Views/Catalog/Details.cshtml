@model ProductDetailsViewModel
@{
    ViewData["Title"] = Model.Name;
}

<div class="container py-4">
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/" class="text-primary">Home</a></li>
            <li class="breadcrumb-item"><a asp-controller="Catalog" asp-action="Index" class="text-primary">Catalog</a></li>
            <li class="breadcrumb-item"><a asp-controller="Catalog" asp-action="Index" asp-route-category="@((int)Model.Category)" class="text-primary">@Model.CategoryName</a></li>
            <li class="breadcrumb-item active">@Model.Name</li>
        </ol>
    </nav>

    <div class="row">
        <div class="col-md-5 mb-4">
            <div class="card bg-dark border-secondary">
                @if (Model.ImageUrl != null)
                {
                    <img src="@Model.ImageUrl" class="card-img-top" alt="@Model.Name" style="max-height: 400px; object-fit: contain;">
                }
                else
                {
                    <div class="card-img-top bg-secondary d-flex align-items-center justify-content-center" style="height: 300px;">
                        <i class="bi bi-image text-muted display-1"></i>
                    </div>
                }
            </div>
        </div>
        <div class="col-md-7">
            <span class="badge bg-secondary mb-2">@Model.CategoryName</span>
            <h1 class="mb-3">@Model.Name</h1>

            <div class="d-flex align-items-center mb-4">
                <span class="display-5 fw-bold text-primary">$@Model.Price.ToString("F2")</span>
                @if (Model.OldPrice.HasValue)
                {
                    <span class="fs-4 text-muted text-decoration-line-through ms-3">$@Model.OldPrice.Value.ToString("F2")</span>
                    <span class="badge bg-danger ms-2">Save @Model.DiscountPercent%</span>
                }
            </div>

            <div class="mb-4">
                @if (Model.InStock)
                {
                    <span class="text-success"><i class="bi bi-check-circle me-1"></i>In Stock (@Model.StockQuantity available)</span>
                }
                else
                {
                    <span class="text-danger"><i class="bi bi-x-circle me-1"></i>Out of Stock</span>
                }
            </div>

            <p class="text-muted mb-4">@Model.Description</p>

            @if (Model.InStock)
            {
                <form asp-controller="Cart" asp-action="Add" method="post" class="mb-4">
                    <input type="hidden" name="ProductId" value="@Model.Id" />
                    <div class="row g-2 align-items-center">
                        <div class="col-auto">
                            <label class="form-label mb-0">Quantity:</label>
                        </div>
                        <div class="col-auto">
                            <select name="Quantity" class="form-select bg-dark border-secondary" style="width: 80px;">
                                @for (int i = 1; i <= Math.Min(Model.StockQuantity, 10); i++)
                                {
                                    <option value="@i">@i</option>
                                }
                            </select>
                        </div>
                        <div class="col-auto">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="bi bi-cart-plus me-2"></i>Add to Cart
                            </button>
                        </div>
                    </div>
                </form>
            }

            <div class="card bg-dark border-secondary">
                <div class="card-body">
                    <h6><i class="bi bi-info-circle me-2"></i>How it works</h6>
                    <ol class="mb-0 text-muted small">
                        <li>Add the product to your cart</li>
                        <li>Complete the checkout process</li>
                        <li>Receive your key/code instantly</li>
                        <li>Redeem on the respective platform</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>

    @if (Model.RelatedProducts.Any())
    {
        <section class="mt-5">
            <h4 class="mb-4">Related Products</h4>
            <div class="row g-4">
                @foreach (var product in Model.RelatedProducts)
                {
                    <div class="col-6 col-md-3">
                        <partial name="_ProductCard" model="product" />
                    </div>
                }
            </div>
        </section>
    }
</div>
