<div class="container container-wide">
    <div class="game-page">
        <!-- Sidebar -->
        <aside class="game-sidebar">
            <div class="sidebar-search">
                <i class="bi bi-search"></i>
                <input type="text" placeholder="–ü–æ–∏—Å–∫" id="cardSearch" onkeyup="filterCards(this.value)">
            </div>

            <div id="cardsList">
            @foreach (var c in allCards)
            {
                var isActive = c.Slug == card.Slug;
                var hasImg = !string.IsNullOrEmpty(c.ImageUrl);

                <a href="/Catalog/GiftCard/@c.Slug" class="sidebar-game @(isActive ? "active" : "")">
                    <div class="sidebar-game-icon" style="background: @c.Gradient;">
                        @if (hasImg)
                        {
                            <img src="@c.ImageUrl" alt="@c.Name" />
                        }
                        else
                        {
                            <span>@c.Icon</span>
                        }
                    </div>
                    <div class="sidebar-game-info">
                        <span class="sidebar-game-name">@c.Name</span>
                        @if (!string.IsNullOrEmpty(c.Description))
                        {
                            <span class="sidebar-game-subtitle">@c.Description</span>
                        }
                    </div>
                </a>
            }
