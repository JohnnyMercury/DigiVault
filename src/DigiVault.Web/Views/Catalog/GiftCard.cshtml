    function filterCards(query) {
        const cards = document.querySelectorAll('.sidebar-game');
        const lowerQuery = query.toLowerCase();
        cards.forEach(card => {
            const name = card.querySelector('.sidebar-game-name')?.textContent.toLowerCase() || '';
