@model DigiVault.Web.Models.CatalogViewModel
@using DigiVault.Core.Entities
@{
    ViewData["Title"] = "Каталог";
    // Рандомный порядок для верхнего блока "Популярные"
    var rng = new Random();
    var popularItems = (Model.Items ?? Enumerable.Empty<DigiVault.Web.Models.CatalogItemViewModel>())
        .OrderBy(_ => rng.Next())
        .Take(6)
        .ToList();
}

<style>
    /* Hero Section */
    .catalog-hero {
        padding: 3rem 0 2rem;
        text-align: center;
    }

    .catalog-hero-title {
        font-size: 2.5rem;
        font-weight: 800;
        margin-bottom: 0.5rem;
    }

    .catalog-hero-title span {
        background: var(--accent-gradient);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    .catalog-hero-subtitle {
        color: rgba(255, 255, 255, 0.5);
        font-size: 1.1rem;
    }

    /* Game Tiles Grid */
    .games-section {
        padding: 2rem 0;
    }

    .section-title {
        font-size: 1.5rem;
        font-weight: 700;
        margin-bottom: 1.5rem;
        display: flex;
        align-items: center;
        gap: 0.75rem;
    }

    .section-title i {
        color: #667eea;
    }

    .game-tiles-grid {
        display: grid;
        grid-template-columns: repeat(6, 1fr);
        gap: 1rem;
        margin-bottom: 2rem;
    }

    @@media (max-width: 1200px) {
        .game-tiles-grid { grid-template-columns: repeat(4, 1fr); }
    }
    @@media (max-width: 768px) {
        .game-tiles-grid { grid-template-columns: repeat(3, 1fr); }
    }
    @@media (max-width: 576px) {
        .game-tiles-grid { grid-template-columns: repeat(2, 1fr); }
    }

    .game-tile {
        text-decoration: none;
        color: white;
        display: block;
        transition: all 0.3s ease;
    }

    .game-tile:hover {
        transform: translateY(-5px);
        color: white;
    }

    .game-tile-image-wrapper {
        aspect-ratio: 1;
        border-radius: 16px;
        display: flex;
        align-items: center;
        justify-content: center;
        overflow: hidden;
        margin-bottom: 0.6rem;
    }

    .game-tile-icon {
        font-size: 3rem;
        filter: drop-shadow(0 4px 8px rgba(0, 0, 0, 0.3));
    }

    .game-tile-image {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.3s ease;
    }

    .game-tile:hover .game-tile-image {
        transform: scale(1.05);
    }

    .game-tile-name {
        font-weight: 600;
        font-size: 0.9rem;
        text-align: left;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }

    /* Category Cards */
    .category-cards {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 1.5rem;
        margin-bottom: 3rem;
    }

    @@media (max-width: 992px) {
        .category-cards { grid-template-columns: repeat(2, 1fr); }
    }
    @@media (max-width: 576px) {
        .category-cards { grid-template-columns: 1fr; }
    }

    .category-card {
        background: linear-gradient(135deg, #1e1e2f 0%, #2a2a40 100%);
        border-radius: 20px;
        padding: 2rem;
        display: flex;
        align-items: center;
        gap: 1.5rem;
        text-decoration: none;
        color: white;
        border: 1px solid rgba(255, 255, 255, 0.05);
        transition: all 0.3s ease;
    }

    .category-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 20px 40px rgba(0, 0, 0, 0.3);
        border-color: rgba(102, 126, 234, 0.3);
        color: white;
    }

    .category-card-icon {
        width: 80px;
        height: 80px;
        border-radius: 20px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 2.5rem;
        flex-shrink: 0;
    }

    .category-card-icon.vpn { background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); }
    .category-card-icon.game { background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%); color: #0a0a0f; }
    .category-card-icon.gift { background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%); }

    .category-card-content h3 {
        font-size: 1.25rem;
        font-weight: 700;
        margin-bottom: 0.25rem;
    }

    .category-card-content p {
        color: rgba(255, 255, 255, 0.5);
        margin: 0;
        font-size: 0.9rem;
    }

    .category-card-arrow {
        margin-left: auto;
        font-size: 1.5rem;
        color: rgba(255, 255, 255, 0.3);
        transition: all 0.3s ease;
    }

    .category-card:hover .category-card-arrow {
        color: white;
        transform: translateX(5px);
    }

    /* Filters */
    .filters-bar {
        background: rgba(30, 30, 47, 0.5);
        border: 1px solid rgba(255, 255, 255, 0.05);
        border-radius: 16px;
        padding: 1rem 1.5rem;
        margin-bottom: 2rem;
        display: flex;
        flex-wrap: wrap;
        gap: 1rem;
        align-items: center;
        justify-content: space-between;
    }

    .filter-pills {
        display: flex;
        gap: 0.5rem;
        flex-wrap: wrap;
    }

    .filter-pill {
        background: rgba(255, 255, 255, 0.05);
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 25px;
        padding: 0.5rem 1.25rem;
        color: rgba(255, 255, 255, 0.7);
        font-size: 0.9rem;
        font-weight: 500;
        transition: all 0.3s ease;
        text-decoration: none;
    }

    .filter-pill:hover, .filter-pill.active {
        background: var(--primary-gradient);
        border-color: transparent;
        color: white;
    }

    .search-form {
        display: flex;
        gap: 0.5rem;
    }

    .search-input {
        background: rgba(255, 255, 255, 0.05);
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 12px;
        padding: 0.5rem 1rem;
        color: white;
        min-width: 250px;
    }

    .search-input:focus {
        background: rgba(255, 255, 255, 0.08);
        border-color: rgba(102, 126, 234, 0.5);
        box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.1);
        color: white;
        outline: none;
    }

    .search-input::placeholder {
        color: rgba(255, 255, 255, 0.4);
    }

    /* Square Product Cards Grid */
    .products-grid {
        display: grid;
        grid-template-columns: repeat(5, 1fr);
        gap: 1.25rem;
    }

    @@media (max-width: 1200px) {
        .products-grid { grid-template-columns: repeat(4, 1fr); }
    }
    @@media (max-width: 992px) {
        .products-grid { grid-template-columns: repeat(3, 1fr); }
    }
    @@media (max-width: 768px) {
        .products-grid { grid-template-columns: repeat(2, 1fr); }
    }
    @@media (max-width: 480px) {
        .products-grid { grid-template-columns: repeat(2, 1fr); gap: 0.75rem; }
    }

    .product-square {
        text-decoration: none;
        color: white;
        display: block;
        transition: all 0.3s ease;
        position: relative;
    }

    .product-square:hover {
        transform: translateY(-6px);
        color: white;
    }

    .product-square-image {
        aspect-ratio: 1;
        border-radius: 18px;
        overflow: hidden;
        display: flex;
        align-items: center;
        justify-content: center;
        position: relative;
        border: 1px solid rgba(255, 255, 255, 0.06);
        transition: all 0.3s ease;
    }

    .product-square:hover .product-square-image {
        border-color: rgba(102, 126, 234, 0.3);
        box-shadow: 0 16px 40px rgba(0, 0, 0, 0.35);
    }

    .product-square-image img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.3s ease;
    }

    .product-square:hover .product-square-image img {
        transform: scale(1.05);
    }

    .product-square-icon {
        font-size: 3.5rem;
        filter: drop-shadow(0 4px 12px rgba(0, 0, 0, 0.3));
    }

    .product-square-badges {
        position: absolute;
        top: 0.6rem;
        left: 0.6rem;
        display: flex;
        gap: 0.4rem;
        z-index: 2;
    }

    .badge-count {
        background: rgba(0, 0, 0, 0.6);
        backdrop-filter: blur(8px);
        padding: 0.2rem 0.6rem;
        border-radius: 6px;
        font-size: 0.7rem;
        font-weight: 600;
        color: rgba(255, 255, 255, 0.9);
    }

    .product-square-overlay {
        position: absolute;
        bottom: 0;
        left: 0;
        right: 0;
        padding: 1.5rem 0.75rem 0.75rem;
        background: linear-gradient(transparent, rgba(0, 0, 0, 0.7));
        border-radius: 0 0 18px 18px;
    }

    .product-square-price {
        font-size: 0.85rem;
        font-weight: 700;
        color: #4facfe;
    }

    .product-square-info {
        padding: 0.6rem 0.2rem 0;
    }

    .product-square-name {
        font-weight: 700;
        font-size: 0.9rem;
        line-height: 1.25;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }

    .product-square-category {
        font-size: 0.75rem;
        color: rgba(255, 255, 255, 0.45);
        margin-top: 0.15rem;
    }

    /* Empty State */
    .empty-state {
        text-align: center;
        padding: 5rem 2rem;
    }

    .empty-state i {
        font-size: 5rem;
        color: rgba(255, 255, 255, 0.1);
        margin-bottom: 1.5rem;
    }

    .empty-state h3 {
        font-size: 1.5rem;
        margin-bottom: 0.5rem;
    }

    .empty-state p {
        color: rgba(255, 255, 255, 0.5);
    }

    /* Results count */
    .results-info {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 1.5rem;
    }

    .results-count {
        color: rgba(255, 255, 255, 0.5);
    }

    .results-count strong {
        color: white;
    }
</style>

<!-- Hero -->
<section class="catalog-hero">
    <div class="container container-wide">
        <h1 class="catalog-hero-title">
            @if (!string.IsNullOrEmpty(Model.SearchQuery))
            {
                <span>Результаты поиска: "@Model.SearchQuery"</span>
            }
            else if (!string.IsNullOrEmpty(Model.CategoryFilter))
            {
                var catName = Model.CategoryFilter switch {
                    "vpn" => "VPN подписки",
                    "games" => "Игровая валюта",
                    "giftcards" => "Подарочные карты",
                    _ => "Все товары"
                };
                <span>@catName</span>
            }
            else
            {
                <text>Каталог <span>товаров</span></text>
            }
        </h1>
        <p class="catalog-hero-subtitle">Выберите нужную игру или сервис</p>
    </div>
</section>

@if (string.IsNullOrEmpty(Model.SearchQuery) && string.IsNullOrEmpty(Model.CategoryFilter))
{
    <!-- Popular Tiles (random mix) -->
    <section class="games-section">
        <div class="container container-wide">
            <h2 class="section-title">
                <i class="bi bi-star"></i>
                Популярные товары
            </h2>
            <div class="game-tiles-grid">
                @foreach (var item in popularItems)
                {
                    var hasImage = !string.IsNullOrEmpty(item.ImageUrl);

                    <a href="@item.DetailUrl" class="game-tile">
                        <div class="game-tile-image-wrapper" style="background: @item.Gradient;">
                            @if (hasImage)
                            {
                                <img src="@item.ImageUrl" alt="@item.Name" class="game-tile-image" />
                            }
                            else
                            {
                                <span class="game-tile-icon">@item.Icon</span>
                            }
                        </div>
                        <span class="game-tile-name">@item.Name</span>
                    </a>
                }
            </div>
        </div>
    </section>

    <!-- Category Cards -->
    <section class="pb-4">
        <div class="container container-wide">
            <h2 class="section-title">
                <i class="bi bi-grid-3x3-gap"></i>
                Категории
            </h2>
            <div class="category-cards">
                <a href="/Catalog?category=vpn" class="category-card">
                    <div class="category-card-icon vpn">
                        <i class="bi bi-shield-lock-fill"></i>
                    </div>
                    <div class="category-card-content">
                        <h3>VPN подписки</h3>
                        <p>NordVPN, ExpressVPN и другие</p>
                    </div>
                    <i class="bi bi-chevron-right category-card-arrow"></i>
                </a>
                <a href="/Catalog?category=games" class="category-card">
                    <div class="category-card-icon game">
                        <i class="bi bi-coin"></i>
                    </div>
                    <div class="category-card-content">
                        <h3>Игровая валюта</h3>
                        <p>V-Bucks, Robux, UC и другие</p>
                    </div>
                    <i class="bi bi-chevron-right category-card-arrow"></i>
                </a>
                <a href="/Catalog?category=giftcards" class="category-card">
                    <div class="category-card-icon gift">
                        <i class="bi bi-gift-fill"></i>
                    </div>
                    <div class="category-card-content">
                        <h3>Подарочные карты</h3>
                        <p>PSN, Xbox, Netflix, Spotify</p>
                    </div>
                    <i class="bi bi-chevron-right category-card-arrow"></i>
                </a>
            </div>
        </div>
    </section>
}

<!-- Products Section -->
<section class="pb-5">
    <div class="container container-wide">
        @if (!string.IsNullOrEmpty(Model.SearchQuery) || !string.IsNullOrEmpty(Model.CategoryFilter))
        {
            <!-- Filters Bar -->
            <div class="filters-bar">
                <div class="filter-pills">
                    <a href="/Catalog" class="filter-pill @(string.IsNullOrEmpty(Model.CategoryFilter) && string.IsNullOrEmpty(Model.SearchQuery) ? "active" : "")">
                        <i class="bi bi-grid-3x3-gap me-1"></i> Все
                    </a>
                    <a href="/Catalog?category=vpn" class="filter-pill @(Model.CategoryFilter == "vpn" ? "active" : "")">
                        <i class="bi bi-shield-check me-1"></i> VPN
                    </a>
                    <a href="/Catalog?category=games" class="filter-pill @(Model.CategoryFilter == "games" ? "active" : "")">
                        <i class="bi bi-controller me-1"></i> Игры
                    </a>
                    <a href="/Catalog?category=giftcards" class="filter-pill @(Model.CategoryFilter == "giftcards" ? "active" : "")">
                        <i class="bi bi-gift me-1"></i> Подарки
                    </a>
                </div>
                <form action="/Catalog" method="get" class="search-form">
                    @if (!string.IsNullOrEmpty(Model.CategoryFilter))
                    {
                        <input type="hidden" name="category" value="@Model.CategoryFilter" />
                    }
                    <input type="search" name="search" value="@Model.SearchQuery" class="search-input" placeholder="Поиск..." />
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-search"></i>
                    </button>
                </form>
            </div>

            <!-- Results Info -->
            @if (Model.Items?.Any() == true)
            {
                <div class="results-info">
                    <span class="results-count">
                        Найдено: <strong>@Model.TotalItems</strong> товаров
                    </span>
                </div>
            }
        }
        else
        {
            <h2 class="section-title">
                <i class="bi bi-fire"></i>
                Все товары
            </h2>
        }

        <!-- Products Grid (square cards) -->
        @if (Model.Items?.Any() == true)
        {
            <div class="products-grid">
                @foreach (var item in Model.Items)
                {
                    var hasImage = !string.IsNullOrEmpty(item.ImageUrl);

                    <a href="@item.DetailUrl" class="product-square">
                        <div class="product-square-image" style="background: @item.Gradient;">
                            @if (hasImage)
                            {
                                <img src="@item.ImageUrl" alt="@item.Name" />
                            }
                            else
                            {
                                <span class="product-square-icon">@item.Icon</span>
                            }

                            @if (item.ProductCount > 0)
                            {
                                <div class="product-square-badges">
                                    <span class="badge-count">@item.ProductCount вариантов</span>
                                </div>
                            }

                            @if (item.MinPrice.HasValue)
                            {
                                <div class="product-square-overlay">
                                    <span class="product-square-price">от @item.MinPrice.Value.ToString("N0") ₽</span>
                                </div>
                            }
                        </div>
                        <div class="product-square-info">
                            <div class="product-square-name">@item.Name</div>
                            <div class="product-square-category">@item.CategoryDisplay</div>
                        </div>
                    </a>
                }
            </div>
        }
        else
        {
            <div class="empty-state">
                <i class="bi bi-search d-block"></i>
                <h3>Товары не найдены</h3>
                <p>Попробуйте изменить параметры поиска</p>
                @if (!string.IsNullOrEmpty(Model.SearchQuery) || !string.IsNullOrEmpty(Model.CategoryFilter))
                {
                    <a href="/Catalog" class="btn btn-primary mt-3">
                        <i class="bi bi-arrow-left me-2"></i>Показать все товары
                    </a>
                }
            </div>
        }
    </div>
</section>
