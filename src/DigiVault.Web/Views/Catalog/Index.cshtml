@model CatalogViewModel
@{
    ViewData["Title"] = Model.Category.HasValue ? Model.Category.Value switch
    {
        ProductCategory.VpnSubscription => "VPN Subscriptions",
        ProductCategory.GameCurrency => "Game Currency",
        ProductCategory.GiftCard => "Gift Cards",
        _ => "Catalog"
    } : "Catalog";
}

<div class="container py-4">
    <div class="row">
        <!-- Filters Sidebar -->
        <div class="col-lg-3 mb-4">
            <div class="card bg-dark border-secondary">
                <div class="card-header border-secondary">
                    <h5 class="mb-0"><i class="bi bi-funnel me-2"></i>Filters</h5>
                </div>
                <div class="card-body">
                    <form asp-controller="Catalog" asp-action="Index" method="get">
                        <div class="mb-3">
                            <label class="form-label">Category</label>
                            <select name="category" class="form-select bg-dark border-secondary text-white">
                                <option value="">All Categories</option>
                                <option value="1" selected="@(Model.Category == ProductCategory.VpnSubscription)">VPN Subscriptions</option>
                                <option value="2" selected="@(Model.Category == ProductCategory.GameCurrency)">Game Currency</option>
                                <option value="3" selected="@(Model.Category == ProductCategory.GiftCard)">Gift Cards</option>
                            </select>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Sort By</label>
                            <select name="sort" class="form-select bg-dark border-secondary text-white">
                                <option value="" selected="@(Model.SortBy == null)">Featured</option>
                                <option value="price_asc" selected="@(Model.SortBy == "price_asc")">Price: Low to High</option>
                                <option value="price_desc" selected="@(Model.SortBy == "price_desc")">Price: High to Low</option>
                                <option value="name" selected="@(Model.SortBy == "name")">Name</option>
                                <option value="newest" selected="@(Model.SortBy == "newest")">Newest</option>
                            </select>
                        </div>
                        <input type="hidden" name="search" value="@Model.SearchQuery" />
                        <button type="submit" class="btn btn-primary w-100">
                            <i class="bi bi-search me-1"></i>Apply Filters
                        </button>
                    </form>
                </div>
            </div>
        </div>

        <!-- Products Grid -->
        <div class="col-lg-9">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h2 class="mb-0">@ViewData["Title"]</h2>
                    <small class="text-muted">@Model.TotalProducts products found</small>
                </div>
                @if (!string.IsNullOrEmpty(Model.SearchQuery))
                {
                    <div>
                        <span class="badge bg-secondary">
                            Search: @Model.SearchQuery
                            <a asp-controller="Catalog" asp-action="Index" asp-route-category="@Model.Category" class="text-white ms-1">
                                <i class="bi bi-x"></i>
                            </a>
                        </span>
                    </div>
                }
            </div>

            @if (Model.Products.Any())
            {
                <div class="row g-4">
                    @foreach (var product in Model.Products)
                    {
                        <div class="col-6 col-md-4">
                            <partial name="_ProductCard" model="product" />
                        </div>
                    }
                </div>

                @if (Model.TotalPages > 1)
                {
                    <nav class="mt-4">
                        <ul class="pagination justify-content-center">
                            @for (int i = 1; i <= Model.TotalPages; i++)
                            {
                                <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                                    <a class="page-link bg-dark border-secondary"
                                       asp-controller="Catalog" asp-action="Index"
                                       asp-route-category="@Model.Category"
                                       asp-route-search="@Model.SearchQuery"
                                       asp-route-sort="@Model.SortBy"
                                       asp-route-page="@i">@i</a>
                                </li>
                            }
                        </ul>
                    </nav>
                }
            }
            else
            {
                <div class="text-center py-5">
                    <i class="bi bi-search display-1 text-muted"></i>
                    <h4 class="mt-3">No products found</h4>
                    <p class="text-muted">Try adjusting your filters or search query</p>
                    <a asp-controller="Catalog" asp-action="Index" class="btn btn-outline-primary">
                        Clear Filters
                    </a>
                </div>
            }
        </div>
    </div>
</div>
