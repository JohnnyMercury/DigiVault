@using DigiVault.Core.Entities
@{
    ViewData["Title"] = "VPN подписки";
    var vpnProviders = ViewBag.VpnProviders as List<VpnProvider> ?? new List<VpnProvider>();
}

<style>
    .page-hero {
        padding: 3rem 0 2rem;
        text-align: center;
    }

    .page-hero-title {
        font-size: 2.5rem;
        font-weight: 800;
        margin-bottom: 0.5rem;
    }

    .page-hero-title span {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    .page-hero-subtitle {
        color: rgba(255, 255, 255, 0.5);
        font-size: 1.1rem;
    }

    .breadcrumb-nav {
        padding: 1rem 0;
    }

    .breadcrumb-nav a {
        color: rgba(255, 255, 255, 0.5);
        text-decoration: none;
        transition: color 0.3s ease;
    }

    .breadcrumb-nav a:hover {
        color: #667eea;
    }

    .breadcrumb-nav span {
        color: rgba(255, 255, 255, 0.3);
        margin: 0 0.5rem;
    }

    .breadcrumb-nav .current {
        color: white;
    }

    /* Cards Grid */
    .cards-grid {
        display: grid;
        grid-template-columns: repeat(6, 1fr);
        gap: 1.25rem;
        padding: 1rem 0 2rem;
    }

    @@media (max-width: 1400px) {
        .cards-grid { grid-template-columns: repeat(5, 1fr); }
    }
    @@media (max-width: 1200px) {
        .cards-grid { grid-template-columns: repeat(4, 1fr); }
    }
    @@media (max-width: 992px) {
        .cards-grid { grid-template-columns: repeat(3, 1fr); }
    }
    @@media (max-width: 768px) {
        .cards-grid { grid-template-columns: repeat(2, 1fr); }
    }
    @@media (max-width: 480px) {
        .cards-grid { grid-template-columns: repeat(2, 1fr); gap: 1rem; }
    }

    .card-item {
        text-decoration: none;
        color: white;
        display: block;
        transition: all 0.3s ease;
    }

    .card-item:hover {
        transform: translateY(-5px);
        color: white;
    }

    .card-item-image {
        aspect-ratio: 1 / 1;
        border-radius: 16px;
        overflow: hidden;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-bottom: 0.75rem;
    }

    .card-item-image img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        object-position: center;
        transition: transform 0.3s ease;
    }

    .card-item:hover .card-item-image img {
        transform: scale(1.05);
    }

    .card-item-icon {
        font-size: 3.5rem;
        filter: drop-shadow(0 4px 8px rgba(0, 0, 0, 0.3));
    }

    .card-item-name {
        font-size: 0.9rem;
        font-weight: 600;
        text-align: left;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }

    .card-item-tagline {
        font-size: 0.75rem;
        color: rgba(255, 255, 255, 0.5);
        text-align: left;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }

    /* Info Banner */
    .info-banner {
        background: linear-gradient(135deg, rgba(102, 126, 234, 0.1) 0%, rgba(118, 75, 162, 0.1) 100%);
        border: 1px solid rgba(102, 126, 234, 0.2);
        border-radius: 16px;
        padding: 1.5rem;
        margin-bottom: 2rem;
        display: flex;
        align-items: center;
        gap: 1rem;
    }

    .info-banner-icon {
        width: 50px;
        height: 50px;
        border-radius: 12px;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.5rem;
        flex-shrink: 0;
    }

    .info-banner-content h4 {
        font-weight: 600;
        margin-bottom: 0.25rem;
    }

    .info-banner-content p {
        color: rgba(255, 255, 255, 0.6);
        margin: 0;
        font-size: 0.9rem;
    }
</style>

<!-- Breadcrumb -->
<section class="breadcrumb-nav">
    <div class="container">
        <a href="/">Главная</a>
        <span>/</span>
        <a href="/Catalog">Каталог</a>
        <span>/</span>
        <span class="current">VPN подписки</span>
    </div>
</section>

<!-- Hero -->
<section class="page-hero">
    <div class="container">
        <h1 class="page-hero-title">
            <span>VPN подписки</span>
        </h1>
        <p class="page-hero-subtitle">Защитите свою приватность в интернете</p>
    </div>
</section>

<!-- Info Banner -->
<section class="pb-2">
    <div class="container">
        <div class="info-banner">
            <div class="info-banner-icon">
                <i class="bi bi-shield-check"></i>
            </div>
            <div class="info-banner-content">
                <h4>Официальные подписки</h4>
                <p>Мгновенная активация. Ключи доставляются автоматически после оплаты.</p>
            </div>
        </div>
    </div>
</section>

@if (vpnProviders.Any())
{
    <section class="pb-5">
        <div class="container">
            <div class="cards-grid">
                @foreach (var provider in vpnProviders)
                {
                    var hasImage = !string.IsNullOrEmpty(provider.ImageUrl);
                    <a href="/Catalog/VpnProvider/@provider.Slug" class="card-item">
                        <div class="card-item-image" style="background: @provider.Gradient;">
                            @if (hasImage)
                            {
                                <img src="@provider.ImageUrl" alt="@provider.Name" />
                            }
                            else
                            {
                                <span class="card-item-icon">@provider.Icon</span>
                            }
                        </div>
                        <div class="card-item-name">@provider.Name</div>
                        @if (!string.IsNullOrEmpty(provider.Tagline))
                        {
                            <div class="card-item-tagline">@provider.Tagline</div>
                        }
                    </a>
                }
            </div>
        </div>
    </section>
}
