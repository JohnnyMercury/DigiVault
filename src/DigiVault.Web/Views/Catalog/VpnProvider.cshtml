<div class="container container-wide">
    <div class="game-page">
        <!-- Sidebar -->
        <aside class="game-sidebar">
            <div class="sidebar-search">
                <i class="bi bi-search"></i>
                <input type="text" placeholder="Поиск" id="providerSearch" onkeyup="filterProviders(this.value)">
            </div>

            <div id="providersList">
            @foreach (var p in allProviders)
            {
                var isActive = p.Slug == provider.Slug;
                var hasImg = !string.IsNullOrEmpty(p.ImageUrl);

                <a href="/Catalog/VpnProvider/@p.Slug" class="sidebar-game @(isActive ? "active" : "")">
                    <div class="sidebar-game-icon" style="background: @p.Gradient;">
                        @if (hasImg)
                        {
                            <img src="@p.ImageUrl" alt="@p.Name" />
                        }
                        else
                        {
                            <span>@p.Icon</span>
                        }
                    </div>
                    <div class="sidebar-game-info">
                        <span class="sidebar-game-name">@p.Name</span>
                        @if (!string.IsNullOrEmpty(p.Tagline))
                        {
                            <span class="sidebar-game-subtitle">@p.Tagline</span>
                        }
                    </div>
                </a>
            }
            </div>
        </aside>

        <!-- Main Content -->
        <main class="game-main">
            <!-- Features Banner -->
            @if (features.Any())
            {
                <div class="vpn-features-banner">
                    @foreach (var feature in features)
                    {
                        <div class="vpn-feature-item">
                            <i class="bi bi-check-circle-fill"></i>
                            <span>@feature</span>
                        </div>
                    }
                </div>
            }

            <!-- Tab -->
            <div class="game-tabs">
                <button class="game-tab active">VPN подписки</button>
            </div>

            <!-- Products Section -->
            <div class="product-section">
                <h2 class="section-title">@provider.Name — подписки</h2>
                <div class="currency-grid">
                    @if (products.Any())
                    {
                        @foreach (var product in products)
                        {
                            var hasImage = !string.IsNullOrEmpty(product.ImageUrl);
                            var displayName = !string.IsNullOrEmpty(product.TotalDisplay) ? product.TotalDisplay : product.Name;
                            var oldPrice = product.OldPrice ?? product.Price;

                            <div class="product-item" onclick="selectProduct(this, @product.Id, '@product.Amount', '@displayName', @((int)product.Price), @((int)oldPrice))">
                                <div class="currency-card">
                                    <span class="currency-card-selected-badge">Выбрано <i class="bi bi-check"></i></span>
                                    <span class="currency-card-amount">@product.Amount</span>
                                    @if (!string.IsNullOrEmpty(product.Bonus))
                                    {
                                        <span class="currency-card-bonus">@product.Bonus</span>
                                    }
                                    <div class="currency-card-image" style="background: @provider.Gradient;">
                                        @if (hasImage)
                                        {
                                            <img src="@product.ImageUrl" alt="@product.Name" />
                                        }
                                        else if (!string.IsNullOrEmpty(provider.ImageUrl))
                                        {
                                            <img src="@provider.ImageUrl" alt="@provider.Name" />
                                        }
                                        else
                                        {
                                            <span class="currency-card-placeholder">@provider.Icon</span>
                                        }
                                    </div>
                                </div>
                                <div class="product-caption">
                                    <div class="product-caption-price">
                                        @product.Price.ToString("N0") ₽
                                        @if (product.OldPrice.HasValue && product.OldPrice > product.Price)
                                        {
                                            <span class="product-caption-discount">-@product.Discount%</span>
                                            <span class="product-caption-old-price">@product.OldPrice.Value.ToString("N0") ₽</span>
                                        }
                                    </div>
                                    <div class="product-caption-name">
                                        @displayName
                                        @if (!string.IsNullOrEmpty(product.Bonus))
                                        {
                                            <span style="color: #22c55e; font-weight: 600;"> @product.Bonus</span>
                                        }
                                    </div>
