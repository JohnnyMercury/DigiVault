<!-- Popular Products (square cards, full width) -->
<section class="py-4">
    <div class="container container-wide">
        <div class="section-header">
            <h2 class="section-title">
                <i class="bi bi-fire"></i>
                Популярные товары
            </h2>
            <a href="/Catalog" class="btn btn-outline-light btn-sm">
                Все товары <i class="bi bi-arrow-right ms-1"></i>
            </a>
        </div>

        @if (Model.FeaturedItems?.Any() == true)
        {
            <div class="home-products-grid">
                @foreach (var item in Model.FeaturedItems.Take(10))
                {
                    var hasImage = !string.IsNullOrEmpty(item.ImageUrl);

                    <a href="@item.DetailUrl" class="home-product-square">
                        <div class="home-product-image" style="background: @item.Gradient;">
                            @if (hasImage)
                            {
                                <img src="@item.ImageUrl" alt="@item.Name" />
                            }
                            else
                            {
                                <span class="home-product-icon">@item.Icon</span>
                            }
                            @if (item.ProductCount > 0)
                            {
                                <div class="home-product-badge">
                                    <span>@item.ProductCount вариантов</span>
                                </div>
                            }
                            @if (item.MinPrice.HasValue)
                            {
                                <div class="home-product-overlay">
                                    <span class="home-product-price">от @item.MinPrice.Value.ToString("N0") ₽</span>
                                </div>
                            }
                        </div>
                        <div class="home-product-info">
                            <div class="home-product-name">@item.Name</div>
                            <div class="home-product-category">@item.CategoryDisplay</div>
                        </div>
                    </a>
                }
            </div>
        }
        else
        {
            <div class="text-center py-5" style="color: rgba(255,255,255,0.4);">
                <i class="bi bi-box-seam d-block" style="font-size: 3rem; margin-bottom: 1rem;"></i>
                <p>Товары скоро появятся</p>
            </div>
        }
    </div>
</section>

