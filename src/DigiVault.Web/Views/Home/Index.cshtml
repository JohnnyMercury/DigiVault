@model DigiVault.Web.Models.HomeViewModel
@{
    ViewData["Title"] = "Главная";
}

<style>
    /* Hero Banner Slider */
    .hero-slider {
        padding: 2rem 0;
        position: relative;
    }

    .slider-container {
        position: relative;
        overflow: hidden;
        border-radius: 24px;
    }

    .slider-track {
        display: flex;
        transition: transform 0.5s ease-in-out;
    }

    .hero-banner {
        min-width: 100%;
        border-radius: 24px;
        padding: 3rem;
        position: relative;
        overflow: hidden;
        min-height: 280px;
        display: flex;
        align-items: center;
    }

    .hero-banner-content {
        position: relative;
        z-index: 2;
        max-width: 50%;
    }

    .hero-banner-title {
        font-size: 2.5rem;
        font-weight: 800;
        margin-bottom: 1rem;
        line-height: 1.2;
    }

    .hero-banner-title span {
        display: inline;
    }

    .hero-banner-desc {
        color: rgba(255, 255, 255, 0.7);
        margin-bottom: 1.5rem;
        font-size: 1.1rem;
    }

    .hero-banner-image {
        position: absolute;
        top: 0;
        width: 55%;
        height: 100%;
        z-index: 1;
        overflow: hidden;
    }

    .hero-banner-image img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        object-position: center;
    }

    .hero-banner-image::after {
        content: '';
        position: absolute;
        top: 0;
        width: 40%;
        height: 100%;
    }

    /* Layout: right-diagonal (default) — text left, image right diagonal */
    .hero-banner.layout-right-diagonal .hero-banner-image {
        right: 0;
        clip-path: polygon(25% 0, 100% 0, 100% 100%, 0% 100%);
    }
    .hero-banner.layout-right-diagonal .hero-banner-image::after {
        left: 0;
        background: linear-gradient(to right, rgba(0, 0, 0, 0.6), transparent);
    }

    /* Layout: left-diagonal — image left diagonal, text right */
    .hero-banner.layout-left-diagonal {
        justify-content: flex-end;
    }
    .hero-banner.layout-left-diagonal .hero-banner-content {
        text-align: right;
    }
    .hero-banner.layout-left-diagonal .hero-banner-image {
        left: 0;
        clip-path: polygon(0 0, 100% 0, 75% 100%, 0% 100%);
    }
    .hero-banner.layout-left-diagonal .hero-banner-image::after {
        right: 0;
        background: linear-gradient(to left, rgba(0, 0, 0, 0.6), transparent);
    }
    .hero-banner.layout-left-diagonal .btn {
        margin-left: auto;
    }

    /* Layout: full-overlay — image covers everything, centered text */
    .hero-banner.layout-full-overlay .hero-banner-content {
        max-width: 70%;
        text-align: center;
        margin: 0 auto;
    }
    .hero-banner.layout-full-overlay .hero-banner-image {
        width: 100%;
        left: 0;
        clip-path: none;
    }
    .hero-banner.layout-full-overlay .hero-banner-image::after {
        width: 100%;
        left: 0;
        background: rgba(0, 0, 0, 0.5);
    }
    .hero-banner.layout-full-overlay .btn {
        margin: 0 auto;
        display: inline-flex;
    }

    /* Slider Controls */
    .slider-dots {
        display: flex;
        justify-content: center;
        gap: 0.5rem;
        margin-top: 1rem;
    }

    .slider-dot {
        width: 10px;
        height: 10px;
        border-radius: 50%;
        background: rgba(255, 255, 255, 0.3);
        cursor: pointer;
        transition: all 0.3s ease;
    }

    .slider-dot.active {
        background: #667eea;
        width: 30px;
        border-radius: 5px;
    }

    .slider-arrows {
        position: absolute;
        top: 50%;
        transform: translateY(-50%);
        width: 100%;
        display: flex;
        justify-content: space-between;
        padding: 0 1rem;
        pointer-events: none;
        z-index: 10;
        opacity: 0;
        transition: opacity 0.3s ease;
    }

    .slider-container:hover .slider-arrows {
        opacity: 1;
    }

    .slider-arrow {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        background: rgba(0, 0, 0, 0.5);
        backdrop-filter: blur(10px);
        border: 1px solid rgba(255, 255, 255, 0.1);
        color: white;
        display: flex;
        align-items: center;
        justify-content: center;
        cursor: pointer;
        pointer-events: all;
        transition: all 0.3s ease;
        transform: scale(0.8);
    }

    .slider-container:hover .slider-arrow {
        transform: scale(1);
    }

    .slider-arrow:hover {
        background: rgba(102, 126, 234, 0.8);
        transform: scale(1.1);
    }

    /* Category Tiles */
    .categories-grid {
        padding: 2rem 0;
    }

    .category-tile {
        background: linear-gradient(135deg, #1e1e2f 0%, #2a2a40 100%);
        border-radius: 16px;
        padding: 1.5rem;
        display: flex;
        align-items: center;
        gap: 1rem;
        transition: all 0.3s ease;
        text-decoration: none;
        color: white;
        position: relative;
        overflow: hidden;
        border: 1px solid rgba(255, 255, 255, 0.05);
    }

    .category-tile:hover {
        transform: translateY(-5px);
        box-shadow: 0 20px 40px rgba(0, 0, 0, 0.3);
        border-color: rgba(102, 126, 234, 0.3);
        color: white;
    }

    .category-tile-icon {
        width: 60px;
        height: 60px;
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.5rem;
        flex-shrink: 0;
    }

    .category-tile-icon.vpn { background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); }
    .category-tile-icon.game { background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%); color: #0a0a0f; }
    .category-tile-icon.gift { background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%); }
    .category-tile-icon.ps { background: linear-gradient(135deg, #003791 0%, #0070d1 100%); }
    .category-tile-icon.xbox { background: linear-gradient(135deg, #107c10 0%, #1db954 100%); }

    .category-tile-content {
        flex-grow: 1;
    }

    .category-tile-name {
        font-weight: 600;
        font-size: 1.1rem;
        margin-bottom: 0.25rem;
    }

    .category-tile-count {
        font-size: 0.85rem;
        color: rgba(255, 255, 255, 0.5);
    }

    .category-tile-arrow {
        color: rgba(255, 255, 255, 0.3);
        transition: all 0.3s ease;
    }

    .category-tile:hover .category-tile-arrow {
        color: white;
        transform: translateX(5px);
    }

    /* Section Headers */
    .section-header {
        display: flex;
        align-items: center;
        justify-content: space-between;
        margin-bottom: 1.5rem;
    }

    .section-title {
        font-size: 1.75rem;
        font-weight: 700;
        display: flex;
        align-items: center;
        gap: 0.75rem;
    }

    .section-title i {
        color: #667eea;
    }

    .section-badge {
        background: rgba(102, 126, 234, 0.2);
        color: #667eea;
        padding: 0.25rem 0.75rem;
        border-radius: 20px;
        font-size: 0.85rem;
        font-weight: 600;
    }

    /* Home Products Grid - Square Cards */
    .home-products-grid {
        display: grid;
        grid-template-columns: repeat(5, 1fr);
        gap: 1.25rem;
    }

    @@media (max-width: 1200px) {
        .home-products-grid { grid-template-columns: repeat(4, 1fr); }
    }
    @@media (max-width: 992px) {
        .home-products-grid { grid-template-columns: repeat(3, 1fr); }
    }
    @@media (max-width: 768px) {
        .home-products-grid { grid-template-columns: repeat(2, 1fr); }
    }
    @@media (max-width: 480px) {
        .home-products-grid { grid-template-columns: repeat(2, 1fr); gap: 0.75rem; }
    }

    .home-product-square {
        text-decoration: none;
        color: white;
        display: block;
        transition: all 0.3s ease;
    }

    .home-product-square:hover {
        transform: translateY(-6px);
        color: white;
    }

    .home-product-image {
        aspect-ratio: 1;
        border-radius: 18px;
        overflow: hidden;
        display: flex;
        align-items: center;
        justify-content: center;
        position: relative;
        border: 1px solid rgba(255, 255, 255, 0.06);
        transition: all 0.3s ease;
    }

    .home-product-square:hover .home-product-image {
        border-color: rgba(102, 126, 234, 0.3);
        box-shadow: 0 16px 40px rgba(0, 0, 0, 0.35);
    }

    .home-product-image img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.3s ease;
    }

    .home-product-square:hover .home-product-image img {
        transform: scale(1.05);
    }

    .home-product-icon {
        font-size: 3.5rem;
        filter: drop-shadow(0 4px 12px rgba(0, 0, 0, 0.3));
    }

    .home-product-badge {
        position: absolute;
        top: 0.6rem;
        left: 0.6rem;
        z-index: 2;
    }

    .home-product-badge span {
        background: rgba(0, 0, 0, 0.6);
        backdrop-filter: blur(8px);
        padding: 0.2rem 0.6rem;
        border-radius: 6px;
        font-size: 0.7rem;
        font-weight: 600;
        color: rgba(255, 255, 255, 0.9);
    }

    .home-product-overlay {
        position: absolute;
        bottom: 0;
        left: 0;
        right: 0;
        padding: 1.5rem 0.75rem 0.75rem;
        background: linear-gradient(transparent, rgba(0, 0, 0, 0.7));
        border-radius: 0 0 18px 18px;
    }

    .home-product-price {
        font-size: 0.85rem;
        font-weight: 700;
        color: #22c55e;
    }

    .home-product-info {
        padding: 0.6rem 0.2rem 0;
    }

    .home-product-name {
        font-weight: 700;
        font-size: 0.9rem;
        line-height: 1.25;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }

    .home-product-category {
        font-size: 0.75rem;
        color: rgba(255, 255, 255, 0.45);
        margin-top: 0.15rem;
    }

    /* Mobile: Hero Banner */
    @@media (max-width: 768px) {
        .hero-slider {
            padding: 1rem 0;
        }

        .slider-container {
            border-radius: 16px;
        }

        .hero-banner {
            min-height: 200px;
            padding: 1.5rem;
            border-radius: 16px;
        }

        .hero-banner-content {
            max-width: 100%;
            position: relative;
            z-index: 2;
        }

        .hero-banner-title {
            font-size: 1.5rem;
            margin-bottom: 0.5rem;
        }

        .hero-banner-desc {
            font-size: 0.85rem;
            margin-bottom: 1rem;
            display: -webkit-box;
            -webkit-line-clamp: 2;
            -webkit-box-orient: vertical;
            overflow: hidden;
        }

        .hero-banner-image {
            width: 100%;
            left: 0 !important;
            right: 0 !important;
            clip-path: none !important;
            opacity: 0.25;
        }

        .hero-banner-image::after {
            display: none;
        }

        .hero-banner.layout-left-diagonal {
            justify-content: flex-start;
        }

        .hero-banner.layout-left-diagonal .hero-banner-content {
            text-align: left;
        }

        .hero-banner.layout-left-diagonal .btn {
            margin-left: 0;
        }

        .hero-banner.layout-full-overlay .hero-banner-content {
            text-align: left;
            margin: 0;
        }

        .hero-banner.layout-full-overlay .btn {
            margin: 0;
        }

        .slider-arrow {
            width: 32px;
            height: 32px;
        }

        .btn {
            font-size: 0.85rem;
            padding: 0.5rem 1rem;
        }
    }

    /* Mobile: Categories */
    @@media (max-width: 768px) {
        .categories-grid {
            padding: 1rem 0;
        }

        .category-tile {
            padding: 1rem;
            border-radius: 12px;
        }

        .category-tile-icon {
            width: 48px;
            height: 48px;
            border-radius: 10px;
            font-size: 1.2rem;
        }

        .category-tile-name {
            font-size: 1rem;
        }

        .category-tile-count {
            font-size: 0.8rem;
        }
    }

    /* Mobile: Section Headers */
    @@media (max-width: 768px) {
        .section-header {
            flex-wrap: wrap;
            gap: 0.75rem;
        }

        .section-title {
            font-size: 1.3rem;
        }
    }

    /* Mobile: Features Strip */
    @@media (max-width: 768px) {
        .features-strip {
            padding: 1.5rem 1rem;
            margin: 2rem 0;
        }

        .feature-item-icon {
            width: 48px;
            height: 48px;
            border-radius: 12px;
            font-size: 1.2rem;
        }

        .feature-item-title {
            font-size: 0.9rem;
        }

        .feature-item-desc {
            font-size: 0.8rem;
        }
    }

    /* Features Strip */
    .features-strip {
        background: linear-gradient(135deg, rgba(102, 126, 234, 0.1) 0%, rgba(118, 75, 162, 0.1) 100%);
        border-radius: 16px;
        padding: 2rem;
        margin: 3rem 0;
    }

    .feature-item {
        text-align: center;
    }

    .feature-item-icon {
        width: 60px;
        height: 60px;
        border-radius: 16px;
        background: rgba(255, 255, 255, 0.05);
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 1rem;
        font-size: 1.5rem;
    }

    .feature-item-title {
        font-weight: 600;
        margin-bottom: 0.25rem;
    }

    .feature-item-desc {
        font-size: 0.85rem;
        color: rgba(255, 255, 255, 0.5);
    }
</style>

<!-- Hero Banner Slider -->
@{
    var banners = Model.Banners?.ToList() ?? new List<DigiVault.Core.Entities.HeroBanner>();
    var bannerCount = banners.Count;
}
@if (bannerCount > 0)
{
<section class="hero-slider">
    <div class="container container-wide">
        <div class="slider-container">
            <div class="slider-track" id="sliderTrack">
                @foreach (var banner in banners)
                {
                    <div class="hero-banner layout-@banner.Layout" style="background: @banner.Gradient;">
                        <div class="hero-banner-content">
                            <h1 class="hero-banner-title">
                                @banner.Title
                                @if (!string.IsNullOrEmpty(banner.Subtitle))
                                {
                                    <br><span style="color: @banner.SubtitleColor; -webkit-text-fill-color: @banner.SubtitleColor;">@banner.Subtitle</span>
                                }
                            </h1>
                            @if (!string.IsNullOrEmpty(banner.Description))
                            {
                                <p class="hero-banner-desc">@banner.Description</p>
                            }
                            @if (!string.IsNullOrEmpty(banner.ButtonText) && !string.IsNullOrEmpty(banner.ButtonUrl))
                            {
                                <a href="@banner.ButtonUrl" class="btn @banner.ButtonClass">
                                    @banner.ButtonText
                                </a>
                            }
                        </div>
                        <div class="hero-banner-image">
                            @if (!string.IsNullOrEmpty(banner.ImageUrl))
                            {
                                <img src="@banner.ImageUrl" alt="@banner.Title">
                            }
                        </div>
                    </div>
                }
            </div>

            @if (bannerCount > 1)
            {
                <div class="slider-arrows">
                    <div class="slider-arrow" onclick="prevSlide()">
                        <i class="bi bi-chevron-left"></i>
                    </div>
                    <div class="slider-arrow" onclick="nextSlide()">
                        <i class="bi bi-chevron-right"></i>
                    </div>
                </div>
            }
        </div>

        @if (bannerCount > 1)
        {
            <div class="slider-dots">
                @for (int i = 0; i < bannerCount; i++)
                {
                    <div class="slider-dot @(i == 0 ? "active" : "")" onclick="goToSlide(@i)"></div>
                }
            </div>
        }
    </div>
</section>
}

