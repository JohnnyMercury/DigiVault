<style>
    /* Hero Banner Slider */
    .hero-slider {
        padding: 2rem 0;
        position: relative;
    }

    .slider-container {
        position: relative;
        overflow: hidden;
        border-radius: 24px;
    }

    .slider-track {
        display: flex;
        transition: transform 0.5s ease-in-out;
    }

    .hero-banner {
        min-width: 100%;
        border-radius: 24px;
        padding: 3rem;
        position: relative;
        overflow: hidden;
        min-height: 280px;
        display: flex;
        align-items: center;
    }

    .hero-banner.banner-1 {
        background: linear-gradient(135deg, #1a1a2e 0%, #16213e 100%);
    }
    .hero-banner.banner-1::before {
        content: '';
        position: absolute;
        top: 0;
        right: 0;
        width: 50%;
        height: 100%;
        background: linear-gradient(135deg, rgba(102, 126, 234, 0.3) 0%, rgba(118, 75, 162, 0.3) 100%);
        clip-path: polygon(30% 0, 100% 0, 100% 100%, 0% 100%);
    }

    .hero-banner.banner-2 {
        background: linear-gradient(135deg, #0f2027 0%, #203a43 50%, #2c5364 100%);
    }
    .hero-banner.banner-2::before {
        content: '';
        position: absolute;
        top: 0;
        right: 0;
        width: 50%;
        height: 100%;
        background: linear-gradient(135deg, rgba(79, 172, 254, 0.2) 0%, rgba(0, 242, 254, 0.2) 100%);
        clip-path: polygon(30% 0, 100% 0, 100% 100%, 0% 100%);
    }

    .hero-banner.banner-3 {
        background: linear-gradient(135deg, #1a0a2e 0%, #2d1b4e 50%, #1a0a2e 100%);
    }
    .hero-banner.banner-3::before {
        content: '';
        position: absolute;
        top: 0;
        right: 0;
        width: 50%;
        height: 100%;
        background: linear-gradient(135deg, rgba(240, 147, 251, 0.2) 0%, rgba(245, 87, 108, 0.2) 100%);
        clip-path: polygon(30% 0, 100% 0, 100% 100%, 0% 100%);
    }


    .hero-banner-content {
        position: relative;
        z-index: 2;
        max-width: 50%;
    }

    .hero-banner-title {
        font-size: 2.5rem;
        font-weight: 800;
        margin-bottom: 1rem;
        line-height: 1.2;
    }

    .hero-banner-title span {
        background: var(--accent-gradient);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    .hero-banner-title .text-cyan { color: #4facfe !important; -webkit-text-fill-color: #4facfe; }
    .hero-banner-title .text-pink { color: #f093fb !important; -webkit-text-fill-color: #f093fb; }

    .hero-banner-desc {
        color: rgba(255, 255, 255, 0.7);
        margin-bottom: 1.5rem;
        font-size: 1.1rem;
    }

    .hero-banner-image {
        position: absolute;
        right: 2rem;
        top: 50%;
        transform: translateY(-50%);
        width: 200px;
        height: 200px;
        display: flex;
        align-items: center;
        justify-content: center;
        z-index: 1;
    }

    .hero-banner-image img {
        max-width: 100%;
        max-height: 100%;
        object-fit: contain;
        filter: drop-shadow(0 20px 40px rgba(0, 0, 0, 0.5));
    }

    .hero-banner-image i {
        font-size: 8rem;
        opacity: 0.8;
    }

    /* Slider Controls */
    .slider-dots {
        display: flex;
        justify-content: center;
        gap: 0.5rem;
        margin-top: 1rem;
    }

    .slider-dot {
        width: 10px;
        height: 10px;
        border-radius: 50%;
        background: rgba(255, 255, 255, 0.3);
        cursor: pointer;
        transition: all 0.3s ease;
    }

    .slider-dot.active {
        background: #667eea;
        width: 30px;
        border-radius: 5px;
    }

    .slider-arrows {
        position: absolute;
        top: 50%;
        transform: translateY(-50%);
        width: 100%;
        display: flex;
        justify-content: space-between;
        padding: 0 1rem;
        pointer-events: none;
        z-index: 10;
        opacity: 0;
        transition: opacity 0.3s ease;
    }

    .slider-container:hover .slider-arrows {
        opacity: 1;
    }

    .slider-arrow {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        background: rgba(0, 0, 0, 0.5);
        backdrop-filter: blur(10px);
        border: 1px solid rgba(255, 255, 255, 0.1);
        color: white;
        display: flex;
        align-items: center;
        justify-content: center;
        cursor: pointer;
        pointer-events: all;
        transition: all 0.3s ease;
        transform: scale(0.8);
    }

    .slider-container:hover .slider-arrow {
        transform: scale(1);
    }

    .slider-arrow:hover {
        background: rgba(102, 126, 234, 0.8);
        transform: scale(1.1);
    }

    /* Category Tiles */
    .categories-grid {
        padding: 2rem 0;
    }

    .category-tile {
        background: linear-gradient(135deg, #1e1e2f 0%, #2a2a40 100%);
        border-radius: 16px;
        padding: 1.5rem;
        display: flex;
        align-items: center;
        gap: 1rem;
        transition: all 0.3s ease;
        text-decoration: none;
        color: white;
        position: relative;
        overflow: hidden;
        border: 1px solid rgba(255, 255, 255, 0.05);
    }

    .category-tile:hover {
        transform: translateY(-5px);
        box-shadow: 0 20px 40px rgba(0, 0, 0, 0.3);
        border-color: rgba(102, 126, 234, 0.3);
        color: white;
    }

    .category-tile-icon {
        width: 60px;
        height: 60px;
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.5rem;
        flex-shrink: 0;
    }

    .category-tile-icon.vpn { background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); }
    .category-tile-icon.game { background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%); color: #0a0a0f; }
    .category-tile-icon.gift { background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%); }
    .category-tile-icon.ps { background: linear-gradient(135deg, #003791 0%, #0070d1 100%); }
    .category-tile-icon.xbox { background: linear-gradient(135deg, #107c10 0%, #1db954 100%); }

    .category-tile-content {
        flex-grow: 1;
    }

    .category-tile-name {
        font-weight: 600;
        font-size: 1.1rem;
        margin-bottom: 0.25rem;
    }

    .category-tile-count {
        font-size: 0.85rem;
        color: rgba(255, 255, 255, 0.5);
    }

    .category-tile-arrow {
        color: rgba(255, 255, 255, 0.3);
        transition: all 0.3s ease;
    }

    .category-tile:hover .category-tile-arrow {
        color: white;
        transform: translateX(5px);
    }

    /* Section Headers */
    .section-header {
        display: flex;
        align-items: center;
        justify-content: space-between;
        margin-bottom: 1.5rem;
    }

    .section-title {
        font-size: 1.75rem;
        font-weight: 700;
        display: flex;
        align-items: center;
        gap: 0.75rem;
    }

    .section-title i {
        color: #667eea;
    }

    .section-badge {
        background: rgba(102, 126, 234, 0.2);
        color: #667eea;
        padding: 0.25rem 0.75rem;
        border-radius: 20px;
        font-size: 0.85rem;
        font-weight: 600;
    }

    /* Home Products Grid - Square Cards */
    .home-products-grid {
        display: grid;
        grid-template-columns: repeat(5, 1fr);
        gap: 1.25rem;
    }

    @@media (max-width: 1200px) {
        .home-products-grid { grid-template-columns: repeat(4, 1fr); }
    }
    @@media (max-width: 992px) {
        .home-products-grid { grid-template-columns: repeat(3, 1fr); }
    }
    @@media (max-width: 768px) {
        .home-products-grid { grid-template-columns: repeat(2, 1fr); }
    }
    @@media (max-width: 480px) {
        .home-products-grid { grid-template-columns: repeat(2, 1fr); gap: 0.75rem; }
    }

    .home-product-square {
        text-decoration: none;
        color: white;
        display: block;
        transition: all 0.3s ease;
    }

    .home-product-square:hover {
        transform: translateY(-6px);
        color: white;
    }

    .home-product-image {
