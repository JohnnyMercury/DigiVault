@{
    ViewData["Title"] = "Digital Goods Marketplace";
    var featuredProducts = ViewBag.FeaturedProducts as List<ProductViewModel> ?? new List<ProductViewModel>();
}

<!-- Hero Section -->
<section class="bg-dark py-5 border-bottom border-secondary">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <h1 class="display-4 fw-bold mb-3">
                    <span class="text-primary">Digital Goods</span><br>
                    Instant Delivery
                </h1>
                <p class="lead text-muted mb-4">
                    VPN subscriptions, game currencies, and gift cards. Buy securely, receive instantly.
                </p>
                <div class="d-flex gap-3">
                    <a asp-controller="Catalog" asp-action="Index" class="btn btn-primary btn-lg">
                        <i class="bi bi-grid me-2"></i>Browse Catalog
                    </a>
                    <a asp-controller="Account" asp-action="Register" class="btn btn-outline-light btn-lg">
                        Get Started
                    </a>
                </div>
            </div>
            <div class="col-lg-6 text-center d-none d-lg-block">
                <div class="position-relative">
                    <div class="bg-primary bg-opacity-10 rounded-circle position-absolute" style="width: 300px; height: 300px; top: 50%; left: 50%; transform: translate(-50%, -50%);"></div>
                    <i class="bi bi-shield-lock-fill text-primary" style="font-size: 12rem; position: relative; z-index: 1;"></i>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Categories Section -->
<section class="py-5">
    <div class="container">
        <h2 class="text-center mb-4">Categories</h2>
        <div class="row g-4">
            <div class="col-md-4">
                <a asp-controller="Catalog" asp-action="Vpn" class="text-decoration-none">
                    <div class="card bg-dark border-secondary h-100 hover-card">
                        <div class="card-body text-center py-5">
                            <i class="bi bi-shield-check text-primary display-3 mb-3"></i>
                            <h4 class="text-white">VPN Subscriptions</h4>
                            <p class="text-muted mb-0">Protect your privacy online with premium VPN services</p>
                        </div>
                    </div>
                </a>
            </div>
            <div class="col-md-4">
                <a asp-controller="Catalog" asp-action="GameCurrency" class="text-decoration-none">
                    <div class="card bg-dark border-secondary h-100 hover-card">
                        <div class="card-body text-center py-5">
                            <i class="bi bi-controller text-success display-3 mb-3"></i>
                            <h4 class="text-white">Game Currency</h4>
                            <p class="text-muted mb-0">V-Bucks, Robux, and more for your favorite games</p>
                        </div>
                    </div>
                </a>
            </div>
            <div class="col-md-4">
                <a asp-controller="Catalog" asp-action="GiftCards" class="text-decoration-none">
                    <div class="card bg-dark border-secondary h-100 hover-card">
                        <div class="card-body text-center py-5">
                            <i class="bi bi-gift text-warning display-3 mb-3"></i>
                            <h4 class="text-white">Gift Cards</h4>
                            <p class="text-muted mb-0">Steam, PlayStation, Xbox, Netflix and more</p>
                        </div>
                    </div>
                </a>
            </div>
        </div>
    </div>
</section>

<!-- Featured Products -->
@if (featuredProducts.Any())
{
    <section class="py-5 bg-dark border-top border-bottom border-secondary">
        <div class="container">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2>Featured Products</h2>
                <a asp-controller="Catalog" asp-action="Index" class="btn btn-outline-primary">
                    View All <i class="bi bi-arrow-right ms-1"></i>
                </a>
            </div>
            <div class="row g-4">
                @foreach (var product in featuredProducts)
                {
                    <div class="col-6 col-md-4 col-lg-3">
                        <partial name="_ProductCard" model="product" />
                    </div>
                }
            </div>
        </div>
    </section>
}

<!-- Features Section -->
<section class="py-5">
    <div class="container">
        <h2 class="text-center mb-5">Why Choose DigiVault?</h2>
        <div class="row g-4">
            <div class="col-md-3">
                <div class="text-center">
                    <div class="bg-primary bg-opacity-10 rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 80px; height: 80px;">
                        <i class="bi bi-lightning-fill text-primary fs-2"></i>
                    </div>
                    <h5>Instant Delivery</h5>
                    <p class="text-muted small">Get your digital goods immediately after purchase</p>
                </div>
            </div>
            <div class="col-md-3">
                <div class="text-center">
                    <div class="bg-success bg-opacity-10 rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 80px; height: 80px;">
                        <i class="bi bi-shield-check text-success fs-2"></i>
                    </div>
                    <h5>Secure Payments</h5>
                    <p class="text-muted small">Your transactions are protected and encrypted</p>
                </div>
            </div>
            <div class="col-md-3">
                <div class="text-center">
                    <div class="bg-warning bg-opacity-10 rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 80px; height: 80px;">
                        <i class="bi bi-headset text-warning fs-2"></i>
                    </div>
                    <h5>24/7 Support</h5>
                    <p class="text-muted small">Our team is always here to help you</p>
                </div>
            </div>
            <div class="col-md-3">
                <div class="text-center">
                    <div class="bg-info bg-opacity-10 rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 80px; height: 80px;">
                        <i class="bi bi-percent text-info fs-2"></i>
                    </div>
                    <h5>Best Prices</h5>
                    <p class="text-muted small">Competitive prices with regular discounts</p>
                </div>
            </div>
        </div>
    </div>
</section>
