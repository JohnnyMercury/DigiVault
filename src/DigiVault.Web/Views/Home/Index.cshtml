@model DigiVault.Web.Models.HomeViewModel
@{
    ViewData["Title"] = "Главная";
}

<style>
    /* Hero Banner Slider */
    .hero-slider {
        padding: 2rem 0;
        position: relative;
    }

    .slider-container {
        position: relative;
        overflow: hidden;
        border-radius: 24px;
    }

    .slider-track {
        display: flex;
        transition: transform 0.5s ease-in-out;
    }

    .hero-banner {
        min-width: 100%;
        border-radius: 24px;
        padding: 3rem;
        position: relative;
        overflow: hidden;
        min-height: 280px;
        display: flex;
        align-items: center;
    }

    .hero-banner.banner-1 {
        background: linear-gradient(135deg, #1a1a2e 0%, #16213e 100%);
    }
    .hero-banner.banner-1::before {
        content: '';
        position: absolute;
        top: 0;
        right: 0;
        width: 50%;
        height: 100%;
        background: linear-gradient(135deg, rgba(102, 126, 234, 0.3) 0%, rgba(118, 75, 162, 0.3) 100%);
        clip-path: polygon(30% 0, 100% 0, 100% 100%, 0% 100%);
    }

    .hero-banner.banner-2 {
        background: linear-gradient(135deg, #0f2027 0%, #203a43 50%, #2c5364 100%);
    }
    .hero-banner.banner-2::before {
        content: '';
        position: absolute;
        top: 0;
        right: 0;
        width: 50%;
        height: 100%;
        background: linear-gradient(135deg, rgba(79, 172, 254, 0.2) 0%, rgba(0, 242, 254, 0.2) 100%);
        clip-path: polygon(30% 0, 100% 0, 100% 100%, 0% 100%);
    }

    .hero-banner.banner-3 {
        background: linear-gradient(135deg, #1a0a2e 0%, #2d1b4e 50%, #1a0a2e 100%);
    }
    .hero-banner.banner-3::before {
        content: '';
        position: absolute;
        top: 0;
        right: 0;
        width: 50%;
        height: 100%;
        background: linear-gradient(135deg, rgba(240, 147, 251, 0.2) 0%, rgba(245, 87, 108, 0.2) 100%);
        clip-path: polygon(30% 0, 100% 0, 100% 100%, 0% 100%);
    }


    .hero-banner-content {
        position: relative;
        z-index: 2;
        max-width: 50%;
    }

    .hero-banner-title {
        font-size: 2.5rem;
        font-weight: 800;
        margin-bottom: 1rem;
        line-height: 1.2;
    }

    .hero-banner-title span {
        background: var(--accent-gradient);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    .hero-banner-title .text-cyan { color: #4facfe !important; -webkit-text-fill-color: #4facfe; }
    .hero-banner-title .text-pink { color: #f093fb !important; -webkit-text-fill-color: #f093fb; }

    .hero-banner-desc {
        color: rgba(255, 255, 255, 0.7);
        margin-bottom: 1.5rem;
        font-size: 1.1rem;
    }

    .hero-banner-image {
        position: absolute;
        right: 2rem;
        top: 50%;
        transform: translateY(-50%);
        width: 200px;
        height: 200px;
        display: flex;
        align-items: center;
        justify-content: center;
        z-index: 1;
    }

    .hero-banner-image img {
        max-width: 100%;
        max-height: 100%;
        object-fit: contain;
        filter: drop-shadow(0 20px 40px rgba(0, 0, 0, 0.5));
    }

    .hero-banner-image i {
        font-size: 8rem;
        opacity: 0.8;
    }

    /* Slider Controls */
    .slider-dots {
        display: flex;
        justify-content: center;
        gap: 0.5rem;
        margin-top: 1rem;
    }

    .slider-dot {
        width: 10px;
        height: 10px;
        border-radius: 50%;
        background: rgba(255, 255, 255, 0.3);
        cursor: pointer;
        transition: all 0.3s ease;
    }

    .slider-dot.active {
        background: #667eea;
        width: 30px;
        border-radius: 5px;
    }

    .slider-arrows {
        position: absolute;
        top: 50%;
        transform: translateY(-50%);
        width: 100%;
        display: flex;
        justify-content: space-between;
        padding: 0 1rem;
        pointer-events: none;
        z-index: 10;
        opacity: 0;
        transition: opacity 0.3s ease;
    }

    .slider-container:hover .slider-arrows {
        opacity: 1;
    }

    .slider-arrow {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        background: rgba(0, 0, 0, 0.5);
        backdrop-filter: blur(10px);
        border: 1px solid rgba(255, 255, 255, 0.1);
        color: white;
        display: flex;
        align-items: center;
        justify-content: center;
        cursor: pointer;
        pointer-events: all;
        transition: all 0.3s ease;
        transform: scale(0.8);
    }

    .slider-container:hover .slider-arrow {
        transform: scale(1);
    }

    .slider-arrow:hover {
        background: rgba(102, 126, 234, 0.8);
        transform: scale(1.1);
    }

    /* Category Tiles */
    .categories-grid {
        padding: 2rem 0;
    }

    .category-tile {
        background: linear-gradient(135deg, #1e1e2f 0%, #2a2a40 100%);
        border-radius: 16px;
        padding: 1.5rem;
        display: flex;
        align-items: center;
        gap: 1rem;
        transition: all 0.3s ease;
        text-decoration: none;
        color: white;
        position: relative;
        overflow: hidden;
        border: 1px solid rgba(255, 255, 255, 0.05);
    }

    .category-tile:hover {
        transform: translateY(-5px);
        box-shadow: 0 20px 40px rgba(0, 0, 0, 0.3);
        border-color: rgba(102, 126, 234, 0.3);
        color: white;
    }

    .category-tile-icon {
        width: 60px;
        height: 60px;
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.5rem;
        flex-shrink: 0;
    }

    .category-tile-icon.vpn { background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); }
    .category-tile-icon.game { background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%); color: #0a0a0f; }
    .category-tile-icon.gift { background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%); }
    .category-tile-icon.ps { background: linear-gradient(135deg, #003791 0%, #0070d1 100%); }
    .category-tile-icon.xbox { background: linear-gradient(135deg, #107c10 0%, #1db954 100%); }

    .category-tile-content {
        flex-grow: 1;
    }

    .category-tile-name {
        font-weight: 600;
        font-size: 1.1rem;
        margin-bottom: 0.25rem;
    }

    .category-tile-count {
        font-size: 0.85rem;
        color: rgba(255, 255, 255, 0.5);
    }

    .category-tile-arrow {
        color: rgba(255, 255, 255, 0.3);
        transition: all 0.3s ease;
    }

    .category-tile:hover .category-tile-arrow {
        color: white;
        transform: translateX(5px);
    }

    /* Section Headers */
    .section-header {
        display: flex;
        align-items: center;
        justify-content: space-between;
        margin-bottom: 1.5rem;
    }

    .section-title {
        font-size: 1.75rem;
        font-weight: 700;
        display: flex;
        align-items: center;
        gap: 0.75rem;
    }

    .section-title i {
        color: #667eea;
    }

    .section-badge {
        background: rgba(102, 126, 234, 0.2);
        color: #667eea;
        padding: 0.25rem 0.75rem;
        border-radius: 20px;
        font-size: 0.85rem;
        font-weight: 600;
    }

    /* Filter Tabs */
    .filter-tabs {
        display: flex;
        gap: 0.5rem;
        flex-wrap: wrap;
        margin-bottom: 1.5rem;
    }

    .filter-tab {
        background: rgba(255, 255, 255, 0.05);
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 20px;
        padding: 0.5rem 1rem;
        color: rgba(255, 255, 255, 0.7);
        font-size: 0.9rem;
        font-weight: 500;
        transition: all 0.3s ease;
        text-decoration: none;
    }

    .filter-tab:hover, .filter-tab.active {
        background: var(--primary-gradient);
        border-color: transparent;
        color: white;
    }

    .filter-tab .count {
        color: rgba(255, 255, 255, 0.4);
        margin-left: 0.25rem;
    }

    .filter-tab.active .count, .filter-tab:hover .count {
        color: rgba(255, 255, 255, 0.8);
    }

    /* Product Cards - New Design */
    .product-card-new {
        background: #1a1a2e;
        border-radius: 16px;
        overflow: hidden;
        transition: all 0.3s ease;
        border: 1px solid rgba(255, 255, 255, 0.05);
        height: 100%;
        display: flex;
        flex-direction: column;
    }

    .product-card-new:hover {
        transform: translateY(-8px);
        box-shadow: 0 25px 50px rgba(0, 0, 0, 0.4);
        border-color: rgba(102, 126, 234, 0.3);
    }

    .product-card-image {
        position: relative;
        height: 180px;
        overflow: hidden;
    }

    .product-card-image img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.3s ease;
    }

    .product-card-new:hover .product-card-image img {
        transform: scale(1.05);
    }

    .product-card-image-placeholder {
        width: 100%;
        height: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 4rem;
    }

    .product-card-image-placeholder.vpn { background: linear-gradient(135deg, rgba(102, 126, 234, 0.3) 0%, rgba(118, 75, 162, 0.3) 100%); color: #667eea; }
    .product-card-image-placeholder.game { background: linear-gradient(135deg, rgba(79, 172, 254, 0.3) 0%, rgba(0, 242, 254, 0.3) 100%); color: #4facfe; }
    .product-card-image-placeholder.gift { background: linear-gradient(135deg, rgba(240, 147, 251, 0.3) 0%, rgba(245, 87, 108, 0.3) 100%); color: #f093fb; }

    .product-card-badges {
        position: absolute;
        top: 0.75rem;
        left: 0.75rem;
        display: flex;
        gap: 0.5rem;
        flex-wrap: wrap;
    }

    .product-badge-hit {
        background: linear-gradient(135deg, #f5576c 0%, #f093fb 100%);
        padding: 0.25rem 0.75rem;
        border-radius: 6px;
        font-size: 0.7rem;
        font-weight: 700;
        text-transform: uppercase;
    }

    .product-badge-new {
        background: linear-gradient(135deg, #22c55e 0%, #16a34a 100%);
        padding: 0.25rem 0.75rem;
        border-radius: 6px;
        font-size: 0.7rem;
        font-weight: 700;
        text-transform: uppercase;
    }

    .product-badge-sale {
        background: linear-gradient(135deg, #ef4444 0%, #dc2626 100%);
        padding: 0.25rem 0.75rem;
        border-radius: 6px;
        font-size: 0.7rem;
        font-weight: 700;
    }

    .product-card-currency {
        position: absolute;
        bottom: 0.75rem;
        left: 0.75rem;
        background: rgba(0, 0, 0, 0.7);
        backdrop-filter: blur(10px);
        padding: 0.35rem 0.75rem;
        border-radius: 8px;
        font-size: 0.8rem;
        display: flex;
        align-items: center;
        gap: 0.4rem;
    }

    .product-card-currency i {
        color: #fbbf24;
    }

    .product-card-body {
        padding: 1.25rem;
        flex-grow: 1;
        display: flex;
        flex-direction: column;
    }

    .product-card-title {
        font-weight: 600;
        font-size: 1rem;
        margin-bottom: 0.5rem;
        color: white;
        line-height: 1.3;
    }

    .product-card-desc {
        color: rgba(255, 255, 255, 0.5);
        font-size: 0.85rem;
        margin-bottom: 1rem;
        flex-grow: 1;
    }

    .product-card-footer {
        display: flex;
        justify-content: space-between;
        align-items: flex-end;
    }

    .product-card-price {
        display: flex;
        flex-direction: column;
    }

    .product-card-price-old {
        font-size: 0.85rem;
        color: rgba(255, 255, 255, 0.4);
        text-decoration: line-through;
    }

    .product-card-price-current {
        font-size: 1.25rem;
        font-weight: 700;
        color: #4facfe;
    }

    .product-card-btn {
        background: var(--primary-gradient);
        border: none;
        border-radius: 10px;
        padding: 0.5rem 1rem;
        font-size: 0.85rem;
        font-weight: 600;
        color: white;
        transition: all 0.3s ease;
    }

    .product-card-btn:hover {
        transform: scale(1.05);
        box-shadow: 0 5px 20px rgba(102, 126, 234, 0.4);
    }

    /* Games Grid - Small Icons */
    .games-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(100px, 1fr));
        gap: 1rem;
    }

    .game-icon-card {
        aspect-ratio: 1;
        border-radius: 16px;
        overflow: hidden;
        transition: all 0.3s ease;
        position: relative;
    }

    .game-icon-card:hover {
        transform: translateY(-5px) scale(1.05);
        box-shadow: 0 15px 30px rgba(0, 0, 0, 0.4);
    }

    .game-icon-card img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .game-icon-placeholder {
        width: 100%;
        height: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 2.5rem;
        font-weight: 700;
        background: linear-gradient(135deg, #1e1e2f 0%, #2a2a40 100%);
        color: rgba(255, 255, 255, 0.3);
    }

    .game-icon-name {
        text-align: center;
        margin-top: 0.5rem;
        font-size: 0.8rem;
        color: rgba(255, 255, 255, 0.7);
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }

    /* Promo Banner */
    .promo-banner {
        background: linear-gradient(135deg, #1e1e2f 0%, #2a2a40 100%);
        border-radius: 16px;
        padding: 1.5rem;
        display: flex;
        align-items: center;
        gap: 1rem;
        margin-bottom: 1rem;
        border: 1px solid rgba(255, 255, 255, 0.05);
        transition: all 0.3s ease;
    }

    .promo-banner:hover {
        border-color: rgba(102, 126, 234, 0.3);
    }

    .promo-banner-icon {
        width: 50px;
        height: 50px;
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.5rem;
        flex-shrink: 0;
    }

    .promo-banner-icon.telegram { background: linear-gradient(135deg, #0088cc 0%, #00b4d8 100%); }
    .promo-banner-icon.support { background: linear-gradient(135deg, #22c55e 0%, #16a34a 100%); }

    .promo-banner-content {
        flex-grow: 1;
    }

    .promo-banner-title {
        font-weight: 600;
        font-size: 1rem;
        margin-bottom: 0.25rem;
    }

    .promo-banner-desc {
        font-size: 0.85rem;
        color: rgba(255, 255, 255, 0.5);
    }

    /* Features Strip */
    .features-strip {
        background: linear-gradient(135deg, rgba(102, 126, 234, 0.1) 0%, rgba(118, 75, 162, 0.1) 100%);
        border-radius: 16px;
        padding: 2rem;
        margin: 3rem 0;
    }

    .feature-item {
        text-align: center;
    }

    .feature-item-icon {
        width: 60px;
        height: 60px;
        border-radius: 16px;
        background: rgba(255, 255, 255, 0.05);
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 1rem;
        font-size: 1.5rem;
    }

    .feature-item-title {
        font-weight: 600;
        margin-bottom: 0.25rem;
    }

    .feature-item-desc {
        font-size: 0.85rem;
        color: rgba(255, 255, 255, 0.5);
    }
</style>

<!-- Hero Banner Slider -->
