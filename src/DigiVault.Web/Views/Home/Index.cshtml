<!-- Popular Products -->
<section class="py-4">
    <div class="container container-wide">
        <div class="row">
            <!-- Main Content -->
            <div class="col-lg-9">
                <div class="section-header">
                    <h2 class="section-title">
                        <i class="bi bi-fire"></i>
                        Популярные товары
                    </h2>
                    <a href="/Catalog" class="btn btn-outline-light btn-sm">
                        Все товары <i class="bi bi-arrow-right ms-1"></i>
