    }

    .home-product-price {
        font-size: 0.85rem;
        font-weight: 700;
        color: #4facfe;
    }

    .home-product-info {
        padding: 0.6rem 0.2rem 0;
    }

    .home-product-name {
        font-weight: 700;
        font-size: 0.9rem;
