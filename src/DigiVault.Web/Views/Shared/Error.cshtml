@model DigiVault.Web.Models.ErrorViewModel
@{
    ViewData["Title"] = "Error";
}

<div class="container py-5 text-center">
    <i class="bi bi-exclamation-triangle text-danger display-1"></i>
    <h2 class="mt-3">An error occurred</h2>
    <p class="text-muted">An error occurred while processing your request.</p>

    @if (Model?.ShowRequestId ?? false)
    {
        <p class="small text-muted">Request ID: <code>@Model.RequestId</code></p>
    }

    <a asp-controller="Home" asp-action="Index" class="btn btn-primary mt-3">
        <i class="bi bi-house me-2"></i>Go Home
    </a>
</div>
