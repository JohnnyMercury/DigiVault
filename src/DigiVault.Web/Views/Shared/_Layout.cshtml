                            </ul>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link" href="/Account/Login"><i class="bi bi-box-arrow-in-right"></i>Войти</a>
                        </li>
                        <li class="nav-item ms-2">
                            <a class="btn btn-primary" href="/Account/Register">Регистрация</a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <main>
        @RenderBody()
    </main>

    <footer>
