@using Microsoft.AspNetCore.Identity
@using DigiVault.Core.Entities
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
<!DOCTYPE html>
<html lang="en" data-bs-theme="dark">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - DigiVault</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body class="d-flex flex-column min-vh-100">
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark border-bottom border-secondary">
        <div class="container">
            <a class="navbar-brand fw-bold text-primary" href="/">
                <i class="bi bi-shield-lock-fill me-2"></i>DigiVault
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Catalog" asp-action="Index">
                            <i class="bi bi-grid me-1"></i>Catalog
                        </a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" data-bs-toggle="dropdown">
                            Categories
                        </a>
                        <ul class="dropdown-menu dropdown-menu-dark">
                            <li>
                                <a class="dropdown-item" asp-controller="Catalog" asp-action="Vpn">
                                    <i class="bi bi-shield-check me-2"></i>VPN Subscriptions
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item" asp-controller="Catalog" asp-action="GameCurrency">
                                    <i class="bi bi-controller me-2"></i>Game Currency
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item" asp-controller="Catalog" asp-action="GiftCards">
                                    <i class="bi bi-gift me-2"></i>Gift Cards
                                </a>
                            </li>
                        </ul>
                    </li>
                </ul>
                <form class="d-flex me-3" asp-controller="Catalog" asp-action="Index" method="get">
                    <div class="input-group">
                        <input class="form-control form-control-sm bg-dark border-secondary text-white"
                               type="search" name="search" placeholder="Search products..."
                               value="@Context.Request.Query["search"]">
                        <button class="btn btn-outline-primary btn-sm" type="submit">
                            <i class="bi bi-search"></i>
                        </button>
                    </div>
                </form>
                <ul class="navbar-nav">
                    @if (SignInManager.IsSignedIn(User))
                    {
                        var user = await UserManager.GetUserAsync(User);
                        <li class="nav-item">
                            <a class="nav-link position-relative" asp-controller="Cart" asp-action="Index">
                                <i class="bi bi-cart3"></i>
                                <span id="cart-count" class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-primary" style="display: none;">
                                    0
                                </span>
                            </a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" data-bs-toggle="dropdown">
                                <i class="bi bi-wallet2 me-1"></i>
                                $<span id="user-balance">@user?.Balance.ToString("F2")</span>
                            </a>
                            <ul class="dropdown-menu dropdown-menu-dark dropdown-menu-end">
                                <li>
                                    <a class="dropdown-item" asp-controller="Account" asp-action="Deposit">
                                        <i class="bi bi-plus-circle me-2"></i>Deposit
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-controller="Account" asp-action="Transactions">
                                        <i class="bi bi-clock-history me-2"></i>Transactions
                                    </a>
                                </li>
                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" data-bs-toggle="dropdown">
                                <i class="bi bi-person-circle me-1"></i>@user?.Email
                            </a>
                            <ul class="dropdown-menu dropdown-menu-dark dropdown-menu-end">
                                <li>
                                    <a class="dropdown-item" asp-controller="Account" asp-action="Profile">
                                        <i class="bi bi-person me-2"></i>Profile
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-controller="Account" asp-action="Orders">
                                        <i class="bi bi-box me-2"></i>My Orders
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-controller="Account" asp-action="ChangePassword">
                                        <i class="bi bi-key me-2"></i>Change Password
                                    </a>
                                </li>
                                @if (User.IsInRole("Admin"))
                                {
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <a class="dropdown-item text-warning" asp-area="Admin" asp-controller="Dashboard" asp-action="Index">
                                            <i class="bi bi-gear me-2"></i>Admin Panel
                                        </a>
                                    </li>
                                }
                                <li><hr class="dropdown-divider"></li>
                                <li>
                                    <form asp-controller="Account" asp-action="Logout" method="post">
                                        <button type="submit" class="dropdown-item text-danger">
                                            <i class="bi bi-box-arrow-right me-2"></i>Logout
                                        </button>
                                    </form>
                                </li>
                            </ul>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Account" asp-action="Login">
                                <i class="bi bi-box-arrow-in-right me-1"></i>Login
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="btn btn-primary btn-sm ms-2" asp-controller="Account" asp-action="Register">
                                Register
                            </a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <main class="flex-grow-1">
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="container mt-3">
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="bi bi-check-circle me-2"></i>@TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            </div>
        }
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="container mt-3">
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="bi bi-exclamation-circle me-2"></i>@TempData["ErrorMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            </div>
        }
        @RenderBody()
    </main>

    <footer class="bg-dark border-top border-secondary py-4 mt-auto">
        <div class="container">
            <div class="row">
                <div class="col-md-4 mb-3">
                    <h5 class="text-primary"><i class="bi bi-shield-lock-fill me-2"></i>DigiVault</h5>
                    <p class="text-muted small">Your trusted source for digital goods. VPN subscriptions, game currencies, and gift cards - all in one place.</p>
                </div>
                <div class="col-md-2 mb-3">
                    <h6>Categories</h6>
                    <ul class="list-unstyled small">
                        <li><a href="/Catalog?category=1" class="text-muted text-decoration-none">VPN</a></li>
                        <li><a href="/Catalog?category=2" class="text-muted text-decoration-none">Game Currency</a></li>
                        <li><a href="/Catalog?category=3" class="text-muted text-decoration-none">Gift Cards</a></li>
                    </ul>
                </div>
                <div class="col-md-2 mb-3">
                    <h6>Account</h6>
                    <ul class="list-unstyled small">
                        <li><a asp-controller="Account" asp-action="Profile" class="text-muted text-decoration-none">Profile</a></li>
                        <li><a asp-controller="Account" asp-action="Orders" class="text-muted text-decoration-none">Orders</a></li>
                        <li><a asp-controller="Account" asp-action="Deposit" class="text-muted text-decoration-none">Deposit</a></li>
                    </ul>
                </div>
                <div class="col-md-4 mb-3">
                    <h6>Contact</h6>
                    <ul class="list-unstyled small text-muted">
                        <li><i class="bi bi-envelope me-2"></i>support@digivault.com</li>
                        <li><i class="bi bi-telegram me-2"></i>@@digivault_support</li>
                    </ul>
                </div>
            </div>
            <hr class="border-secondary">
            <div class="text-center text-muted small">
                &copy; @DateTime.Now.Year DigiVault. All rights reserved.
            </div>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
